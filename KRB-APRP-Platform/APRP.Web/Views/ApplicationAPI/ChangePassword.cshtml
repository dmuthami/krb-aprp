@model APRP.Web.Models.UserViewModels.ChangePassword

@{
    Layout = "/Views/Shared/_LayoutSignIn_UI_V3.cshtml";
}

<div class="row w-100 mx-0">
    <div class="col-lg-4 mx-auto prompt__logo--bar">
        <div class="auth-form-light text-center py-5 px-4 px-sm-5">
            <div class="brand-logo">
                <img src="~/ui_v3/images/log.png" alt="logo">
            </div>
            <h5>APRP System</h5>
            <h6 class="font-weight-light">Welcome Back! Please Login to your account.</h6>
            <form class="pt-3" method="post" id="frmLogin">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="mdi mdi mdi-account-key"></i></span>
                        </div>
                        <input asp-for="old_password" type="password" class="form-control" placeholder="Old Password" aria-label="Old Password">
                        <span asp-validation-for="old_password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="mdi mdi-lock"></i></span>
                        </div>
                        <input asp-for="new_password" type="password" class="form-control" placeholder="New Password" aria-label="New Password">
                    </div>
                </div>

                <div class="mt-3">
                    <a class="btn btn-block btn-success btn-lg font-weight-medium auth-form-btn" 
                       onclick="document.getElementById('frmLogin').submit();">Change Password</a>
                </div>
                <div class="text-center mt-4 font-weight-light">
                    Not a member yet? <a asp-controller="Application" asp-action="Sign_Up_Landing" class="text-primary">Click here to register</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
