@{
    ViewData["Title"] = "Send Confirm Code";
    Layout = "/Views/Shared/_LayoutConfirm_UI_v3.cshtml";
}
@model APRP.Web.Models.UserViewModels.ResetPasswordRequest

<form class="pt-3" id="frmConfirmEmail" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class=" mdi mdi-email "></i></span>
            </div>
            <input asp-for="email" type="email" class="form-control" placeholder="Email" aria-label="Email">
            <span asp-validation-for="email" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-block btn-success btn-lg font-weight-medium auth-form-btn"
           onclick="document.getElementById('frmConfirmEmail').submit();">SEND REQUEST</a>
    </div>


    <div class="text-center mt-4 font-weight-light">
        Not a member yet? <a asp-controller="Application" asp-action="Sign_Up_Landing" class="text-primary">Click here to register.</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}