@model APRP.Web.Models.UserViewModels.LoginModel

@{
    Layout = "/Views/Shared/_LayoutSignIn_UI_V3.cshtml";
}

<div class="row w-100 mx-0">
    <div class="col-lg-4 mx-auto prompt__logo--bar">
        <div class="auth-form-light text-center py-5 px-4 px-sm-5">
            <div class="brand-logo">
                <img src="~/ui_v3/images/log.png" alt="logo">
            </div>
            <h5>APRP System</h5>
            <h6 class="font-weight-light">Welcome Back! Please Login to your account.</h6>
            <form class="pt-3" method="post" id="frmLogin">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="mdi mdi mdi-account-key"></i></span>
                        </div>
                        <input asp-for="username" type="text" class="form-control" placeholder="Username" aria-label="Username">
                        <span asp-validation-for="username" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="mdi mdi-lock"></i></span>
                        </div>
                        <input asp-for="password" type="password" class="form-control" placeholder="Password" aria-label="Password">
                    </div>
                </div>

                <div class="my-2 d-flex justify-content-between align-items-center">
                    <div class="form-check-secondary">
                        <label class="form-check-label text-muted">
                            <input asp-for="sendOTPtoEmail"  type="checkbox" class="form-check-input">
                            Send OTP to Email
                        </label>
                    </div>
                    <a href="/Identity/Account/ForgotPassword" class="auth-link text-black">Forgot password</a>
                </div>
                <div class="mt-3">
                    <a class="btn btn-block btn-success btn-lg font-weight-medium auth-form-btn" 
                       onclick="document.getElementById('frmLogin').submit();">Login</a>
                </div>
                <div class="text-center mt-4 font-weight-light">
                    Not a member yet? <a asp-controller="Application" asp-action="Sign_Up_Landing" class="text-primary">Click here to register</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
