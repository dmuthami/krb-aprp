@model APRP.Web.Models.UserViewModels.RegistrationDTO
@{
    Layout = "/Views/Shared/_LayoutConfirm_UI_v3.cshtml";
}

@section CSS {

}

    <h5>APRP System</h5>
    <h6 class="font-weight-light">Enter the code sent to your phone</h6>
    <form class="pt-3" id="frmVerify" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input asp-for="userid" type="hidden" />
        <input asp-for="phone" type="hidden" />
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="mdi mdi-ticket-confirmation"></i></span>
                </div>
                <input asp-for="otp" type="text" class="form-control" placeholder="Enter Code" aria-label="KRA PIN">
            </div>
        </div>

        <div class="mt-3">
            <a class="btn btn-block btn-success btn-lg font-weight-medium auth-form-btn"
           onclick="document.getElementById('frmVerify').submit();">Verify Code</a>
        </div>
        <div class="text-center mt-4 font-weight-light">
            Don't have an account? <a asp-controller="Application" asp-action="Sign_Up_Landing" class="text-primary">Create</a>
        </div>
    </form>

    @section Scripts {

}