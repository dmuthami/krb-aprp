<!-- Content Area Starts -->
<div class="chat-application">
    <div class="chat-content-head">
        <div class="header-details">
            <h5 class="m-0 sidebar-title" style="color:black">
                ARWP Summary
            </h5>
        </div>
    </div>

    <!-- Scroll - vertical, dynamic height -->


    <div class="row">
        <!--card stats start-->
        <div class="col s12 m6 l12">
            <div class="row">
                <div class="col s12 m6 l6 xl6">
                    <div class="card min-height-100 padding-2  animate fadeLeft">
                        <div class="padding-0">
                            <div class="col s5 m5">
                                <h5 class="mb-0">80%</h5>
                                <p class="no-margin">Utilized</p>
                                <p class="mb-0 pt-8">KSH @Model.budgetPlanTotal.ToString("n")</p>
                            </div>
                            <div class="col s7 m7  right-align">
                                <i class="material-icons background-round mt-5 gradient-45deg-green-teal gradient-shadow white-text">attach_money</i>
                                <p class="mb-0">Agency Budget</p>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col s12 m6 l6 xl6">
                    <div class="card min-height-100 padding-2 animate fadeUp">
                        <div class="padding-0">
                            <div class="col s5 m5">
                                <h5 class="mb-0">@Model.ApprovedWorkplans.ToString("N")</h5>
                                <p class="no-margin">Approved</p>
                                <p class="mb-0 pt-8">@Model.TotalWorkplans.ToString("N")</p>
                            </div>
                            <div class="col s7 m7 right-align">
                                <i class="material-icons background-round mt-5 gradient-45deg-purple-amber gradient-shadow white-text">assignment</i>
                                <p class="mb-0">Total Workplans</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s12 m6 l12 xl12">
                    <div class="card">
                        <div class="card-content">
                            <ul class="tabs ">
                                <li class="tab col">
                                    <a class="active" href="#kenha_tab">Kenya National Highways Authority</a>
                                </li>
                                <li class="tab col"><a href="#kura_tab">Kenya Urban Roads Authority</a></li>
                                <li class="tab col"><a href="#kerra_tab">Kenya Rural Roads Authority</a></li>
                                <li class="tab col"><a href="#kws_tab">Kenya Wildlife Service</a></li>
                                <li class="tab col"><a href="#county_tab">County Governments of Kenya</a></li>
                            </ul>
                        </div>
                    </div>
                    <div id="kenha_tab" class="card col s12">
                        <div class=" subscriber-list-card animate fadeRight">
                            <div class="row card-content pb-1">
                                <div class="col s12 m6 l12 xl12">
                                    <h4 class="card-title mb-0">
                                        Summary of work plans prepared.
                                    </h4>
                                </div>
                            </div>
                            <div class="row card-content">
                                <div class="col s12 m6 l12 xl12">
                                    <table class="subscription-table responsive-table striped highlight">
                                        <thead>
                                            <tr>
                                                <th>Number</th>
                                                <th>Link Name</th>
                                                <th>Planned Sections</th>
                                                <th>No. Of Sections</th>
                                                <th>Estimate Cost</th>
                                                <th>IRI</th>
                                                <th>KRB Approval</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.WorkplanRoads.Where(f => f.Road.Authority.Code.Equals("KeNHA", StringComparison.OrdinalIgnoreCase)).Any())
                                            {
                                                foreach (var road in Model.WorkplanRoads.Where(f => f.Road.Authority.Code.Equals("KeNHA", StringComparison.OrdinalIgnoreCase)))
                                                {
                                                    <tr>
                                                        <td>
                                                            <a asp-controller="workplan" asp-action="GetRoadWorkPlan" asp-route-id="@road.Road.ID">@road.Road.RoadNumber</a>
                                                        </td>

                                                        <td>@road.Road.RoadName</td>
                                                        <td>@road.Road.RoadWorkSectionPlans.Count()</td>
                                                        <td class="center-align">@road.Road.RoadSections.Count()</td>
                                                        <td>KSH @road.Road.RoadWorkSectionPlans.Sum(t => t.TotalEstimateCost).ToString("N")</td>
                                                        <td>@String.Format("{0:0.00}", road.RateOfDeterioration)</td>
                                                        <td><span class="badge pink lighten-5 pink-text text-accent-2">Pending</span></td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>

                                                    <td colspan="7">There are no Non R2000 Strategy Roads to display <div class="divider"></div></td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="divider"></div>
                            <div class="row card-content">
