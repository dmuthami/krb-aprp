<!-- Content Area Starts -->
<div class="chat-application">
    <div class="chat-content-head">
        <div class="header-details">
            <h5 class="m-0 sidebar-title">
                @if (Model.Authority != null)
                {
                    @Model.Authority.Code <span> Road Workplan Approval Summary</span>
                }
            </h5>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card">
                <div class="card-content">
                    @{
                        var exclusionString = new string[] { "KeNHA", "KeRRA", "KURA", "KWS" };
                        if (!exclusionString.Contains(Model.RoadWorkSectionPlan.Authority.Code))
                        {
                            <a class="waves-effect waves-light btn-small" asp-controller="workplan" asp-action="Index" asp-route-viewname="agency-approval-summary" asp-route-authorityname="COUNTY">Go To Approval Summary Page</a>
                        }
                        else
                        {
                            <a class="waves-effect waves-light btn-small" asp-controller="workplan" asp-action="Index" asp-route-viewname="agency-approval-summary" asp-route-authorityname="@Model.RoadWorkSectionPlan.Authority.Code">Go To Approval Summary Page</a>
                        }
                    }


                    <a class="waves-effect waves-light btn-small right" asp-controller="workplan" asp-action="Index"><i class="material-icons right">arrow_forward</i> Go To AWRP Summary</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Scroll - vertical, dynamic height -->
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card  card-default #f1f8e9 light-green lighten-5">
                <div class="card-content">
                    <div class="row section">

                        <div class="col s6">
                            <p>
                                <h4 class="card-title strong black-text">
                                    Total Allocated Budget for Road Works :
                                    <span class="#eeeeee grey lighten-3 strong  black-text">
                                        @if (Model.RoadWorkSectionPlan.FundingSource != null)
                                        {
                                            var revenueCodeUnit = Model.RoadWorkSectionPlan.FundingSource.RevenueCollectionCodeUnits;
                                            if (revenueCodeUnit.Where(f => f.RevenueCollectionCodeUnitType.Type == "Others").Any())
                                            {
                                                <span>KSHS @revenueCodeUnit.Where(f => f.RevenueCollectionCodeUnitType.Type == "Others").Sum(s => s.RevenueCollection.Amount).ToString("N")</span>
                                            }
                                            else
                                            {
                                                <span>KSHS @(Model.BudgetCeiling != null ? Model.BudgetCeiling.Amount.ToString("N") : "0.00")</span>
                                            }
                                        }
                                        else
                                        {
                                            <span>KSHS @(Model.BudgetCeiling != null ? Model.BudgetCeiling.Amount.ToString("N") : "0.00")</span>
                                        }
                                    </span>
                                </h4>
                            </p>
                            <p>
                                <h4 class="card-title strong black-text">
                                    Funding Source :
                                    <span class="#eeeeee grey lighten-3 strong  black-text">
                                        @if (Model.RoadWorkSectionPlan.FundingSource != null)
                                        {
                                            <span>@Model.RoadWorkSectionPlan.FundingSource.Name</span>
                                        }
                                        else
                                        {
                                            <span>No Funding source has been set up for the work plan.</span>
                                        }
                                    </span>
                                </h4>
                            </p>
                        </div>
                        <div class="col s6">
                            <p>
                                <h4 class="card-title strong black-text">
                                    Total Workplan Cost :
                                    <span class="#eeeeee grey lighten-3 strong  black-text">
                                        @{
                                            var totalWorkplanCost = 0.0;
                                            var totalInstructedWorks = 0.0;
                                            if (Model.RoadWorkSectionPlan.PlanActivityPBCs != null)
                                            {
                                                totalInstructedWorks = (double)(Model.RoadWorkSectionPlan.PlanActivities.Sum(p => (p.Quantity * (decimal)(p.Rate))));
                                            }

                                            var totalPBCs = 0.0;
                                            if (Model.RoadWorkSectionPlan.PlanActivityPBCs != null)
                                            {
                                                totalPBCs = Model.RoadWorkSectionPlan.PlanActivityPBCs.Sum(p => (p.PlannedKM * p.CostPerKMPerMonth));
                                            }

                                            totalWorkplanCost = totalInstructedWorks + totalPBCs;

                                        }
                                        KSHS @totalWorkplanCost.ToString("N")
                                    </span>
                                </h4>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card card-default">
                <div class="card-content" id="work-section-select">
                    <h4 class="card-title">
                        Road work activities for section : <span class="strong"> @Model.RoadWorkSectionPlan.RoadSection.SectionName</span> on road  <span class="strong"> @Model.RoadWorkSectionPlan.Road.RoadName</span>
                    </h4>
                    <hr />
                    <br />
                    <div class="row">
                        <div class="col s12 p-1">
                            <table id="data-table-unit-activities" class="striped display">
                                <thead class="table-header">
                                    <tr>
