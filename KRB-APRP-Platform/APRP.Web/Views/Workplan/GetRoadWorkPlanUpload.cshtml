@section scripts

                                                            {
    <script src="~/asset_default/app-assets/js/scripts/app-contacts.js" type="text/javascript"></script>
    <script src="~/asset_default/app-assets/vendors/jquery-validation/jquery.validate.min.js"></script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {

            $.ajax({
                method: "POST",
                url: "/UserManagement/GetShortName",
                datatype: "json",
                data: {}
            })
                .done(function (data) {
                    //write json array object
                    console.log(data);
                    //Set Road Section ID to null

                    $("#idSpan").text(data.sn);
                    var Val1 = $("#idHomeAuthority").text();
                    $("#idHomeAuthority").text(Val1 + "-" + data.authorityCode); $("#idGlobalAuthority").text(data.authorityName);
                });


        });

        var AddAdminActivity = function () {
            event.preventDefault();
            var activity = $("#AdminOperationalActivity_ActivityWorks").val();
            var amount = $("#AdminOperationalActivity_Amount").val();
            var IsValid = true;
            if (activity == null || activity == "", amount == null || amount == "") {
                IsValid = false;
            }

            if (isNaN(amount)) {
                IsValid = false;
            }

            if (IsValid) {
                var sendForm = $("#frmAdminActivities").serialize();
                $.ajax(
                    {
                        type: "POST",
                        url: "/Workplan/AddAdmininstrationActivities",
                        data: sendForm,
                        success: function (data) {
                            if (data.success) {
                                swal({
                                    title: "Success",
                                    text: "Record has been added successfully!",
                                    timer: 2000,
                                    icon: "success",
                                    buttons: false
                                }).then(function () {
                                    window.location.href = data.href;
                                });
                            }
                            else {
                                swal(data.message, {
                                    title: 'Error Occured',
                                    icon: "error",
                                });
                            }
                        }
                    }
                );
            }
            else {
                swal("You have errors in your form, please provide Activity/ Works Category and Amount (Number).", {
                    title: 'Error Occured',
                    icon: "error",
                });
            }

        }

        var RemoveAdmininstrationActivities = function (activityId) {
            $.ajax(
                {
                    type: "POST",
                    url: "/Workplan/RemoveAdmininstrationActivities",
                    data: {
                        activityId: activityId
                    },
                    success: function (data) {
                        if (data.success) {
                            window.location.hash = 'workSections';
                            window.location.reload(false);
                        }
                        else {
                            swal(data.message, {
                                title: 'Cancelled',
                                icon: "error",
                            });
                        }
                    }
                });
        }
        var RemoveActivityConfirm = function (activityId) {

            swal({
                title: "Kindly confirm?",
                text: "The item activity will be removed from the work programme!",
                buttons: {
                    cancel: true,
                    delete: 'Yes, Remove'
                }
            }).then(function (willDelete) {
                if (willDelete) {
                    RemoveAdmininstrationActivities(activityId);
                }
            });
        }
    </script>

}
