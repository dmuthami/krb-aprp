<!-- Content Area Starts -->
<div class="chat-application">
    <div class="chat-content-head">
        <div class="header-details">
            <h5 class="m-0 sidebar-title">Annual Road Work Plan Upload</h5>
        </div>
    </div>

    <!-- Scroll - vertical, dynamic height -->

    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card">
                <div class="card-content pb-1">
                    <div class="row">
                        <div class="col s12 m12 l12">
                            <a class="waves-effect waves-light btn-small" asp-controller="workplan" asp-action="UploadWorkplans"><i class="material-icons left">arrow_back</i>Back to Uploads</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-content">
                    <div class="row" id="product-four">
                        <div class="col m10 offset-s4">
                            <h6 class="strong">@ViewBag.Authority.Name.ToUpper() ANNUAL ROAD WORKS PROGRAMME</h6>
                            <p class="black-text strong">CODE: <span class="green-text strong">@ViewBag.Authority.Code.ToUpper()</span></p>
                            <hr>
                            <div class="row">
                                <div class="col s3"><p class="black-text strong">ALLOCATED ADMINISTRATION BUDGET :</p></div>
                                <div class="col s3"><span class="green-text strong"> KSHS @(ViewBag.BudgetAllocated != null? ViewBag.BudgetAllocated.ToString("N") : "")</span></div>
                            </div>
                            <div class="row">
                                <div class="col s3"><p class="black-text strong">TOTAL ADMINISTRATION COST : </p></div>
                                <div class="col s3"><span class="green-text strong"> KSHS 0.0</span></div>
                            </div>
                            <div class="row">
                                <div class="col s3"><p class="black-text strong">FINANCIAL YEAR :  </p></div>
                                <div class="col s3"><span class="green-text strong">@Model.FinancialYear.Code.ToUpper()</span></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-content">

                    @if (User.IsInRole("Approver.Approver1") && ViewBag.Authority.Code != "KRB") //at first level, approval within the authority or county government ()
