                            <form id="frmAdminActivities">
                                <h4 class="card-title mb-0">
                                    Please add administration or operations activities.
                                </h4>
                                <div class="row">
                                    @Html.HiddenFor(m => m.AdminOperationalActivity.ID)
                                    <div class="input-field col s3">
                                        @{
                                            var selectedItem = Model.AdminOperationalActivity.ActivityGroup;

                                            List<SelectListItem> listItems = new List<SelectListItem>();
                                            listItems.Add(new SelectListItem
                                            {
                                                Text = "OPERATIONAL ACTIVITIES",
                                                Value = "OPERATIONAl_ACTIVITIES"
                                            });
                                            listItems.Add(new SelectListItem
                                            {
                                                Text = "HQ ACTIVITIES",
                                                Value = "HQ_ACTIVITIES"
                                            });
                                            listItems.Add(new SelectListItem
                                            {
                                                Text = "AXLE",
                                                Value = "AXLE_ACTIVITIES"
                                            });

                                        }
                                        @Html.DropDownListFor(m => m.AdminOperationalActivity.ActivityGroup, listItems, "-- SELECT ACTIVITY GROUP --")
                                    </div>
                                    <div class="input-field col s4">
                                        @Html.TextAreaFor(m => m.AdminOperationalActivity.ActivityWorks, new { @class = "materialize-textarea validate", aria_required = "true", @required = "required" })
                                        <label>Activity / Works Category</label>
                                    </div>
                                    <div class="input-field col s3">
                                        @Html.TextBoxFor(m => m.AdminOperationalActivity.Amount, new { @class = "validate", aria_required = "true", @required = "required", data_error = ".errorTxt1" })
                                        <label>Amount</label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="input-field col s3">
                                        @Html.TextAreaFor(m => m.AdminOperationalActivity.RoadID, new { @class = "materialize-textarea" })
                                        <label for="message">Road ID</label>
                                    </div>
                                    <div class="input-field col s3">
                                        @Html.TextAreaFor(m => m.AdminOperationalActivity.RoadSection, new { @class = "materialize-textarea" })
                                        <label for="message">Road Section</label>
                                    </div>
                                    <div class="input-field col s3">
                                        @Html.TextBoxFor(m => m.AdminOperationalActivity.ST)
