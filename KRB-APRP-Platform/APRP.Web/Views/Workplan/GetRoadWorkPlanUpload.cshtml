                                                            <a asp-controller="workplan" asp-action="AdmininstrationActivities" asp-route-agecyId="@ViewBag.Authority.ID" asp-route-adminActivityId="@activity.ID"><i class="material-icons pink-text">mode_edit</i></a>&nbsp;
                                                            <a class="tooltipped" data-position="right" data-tooltip="Remove Activity From Plan" href="#!" onclick="RemoveActivityConfirm(@activity.ID)"><i class="material-icons pink-text">delete_forever</i></a>&nbsp;
                                                        </span>
