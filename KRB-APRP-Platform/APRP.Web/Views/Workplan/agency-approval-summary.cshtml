<!-- Content Area Starts -->
<div class="chat-application">
    <div class="chat-content-head">
        <div class="header-details">
            <h5 class="m-0 sidebar-title">
                @if (Model.Authority != null)
                {
                    @Model.Authority.Code <span> Annual Road Workplan Approvals Summary</span>
                }
            </h5>
        </div>
    </div>

    <!-- Scroll - vertical, dynamic height -->
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card">
                <div class="card-content pb-1">
                    <div class="row">
                        <div class="col s12 m12 l12">
                            <a class="waves-effect waves-light btn-small" asp-controller="workplan" asp-action="Index" asp-route-viewname="agency-summary"><i class="material-icons left">arrow_back</i> Go to ARWP Summary</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!--card stats start-->
        <div class="col s12 m6 l12">
            <div class="card animate fadeRight">
                <div class="row card-content pb-1">
                    <div class="col s12 m6 l12 xl12">
                        <h4 class="card-title mb-0">
                            Non R200O Strategy Roads for approval
                        </h4>
                    </div>
                </div>
                <div class="row card-content">
                    <div class="col s12 m6 l12 xl12">
                        <table class="subscription-table responsive-table highlight">
                            <thead>
                                <tr>
                                    <th>Constituency</th>
                                    <th>Section Name</th>
                                    <th>Length (KM)</th>
                                    <!--
                                         <th>Start Chainage</th>
                                    <th>End Chainage</th>
                                    -->
                                    <th>Surface Type</th>
                                    <th>Work Category</th>
                                    <th>Funding Source</th>
                                    <th>Fund Type</th>
                                    <th>Execution Method</th>
                                    <th>Total Est. Cost</th>
                                    <th>Revision</th>
                                    <th>Workplan Status</th>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.WorkplanRoads.Any())
                                {
                                    foreach (var roadVar in Model.WorkplanRoads.OrderBy(i => i.Road.RoadNumber))
                                    {

                                        if (roadVar.Road.RoadWorkSectionPlans != null && Model.approvalAuthority != "COUNTY")
                                        {
                                            var countRow = 0;

                                            foreach (var sectionPln in roadVar.Road.RoadWorkSectionPlans.Where(a => a.Authority.Code == Model.approvalAuthority))
                                            {
                                                if (countRow == 0)
                                                {
                                                    <tr class="black-text light-green lighten-5 bold strong">
                                                        <td colspan="12">
                                                            <span class="right">Road : @roadVar.Road.RoadName |  Road IRI / ARD : @String.Format("{0:0.00}", roadVar.RateOfDeterioration) | Road Total Estimate KSH @roadVar.Road.RoadWorkSectionPlans.Sum(t => t.TotalEstimateCost).ToString("N") </span>
                                                        </td>
                                                    </tr>
                                                    countRow++;
                                                }
                                                <tr>
                                                    <td>
                                                        @(sectionPln.RoadSection.Constituency != null ? sectionPln.RoadSection.Constituency.Name : "")
                                                    </td>
                                                    <td class="strong">
                                                        @sectionPln.RoadSection.SectionName
                                                    </td>
                                                    <th> @sectionPln.RoadSection.Length.ToString("N")</th>
                                                    <!--
                                                         <th>Start Chainage</th>
                                                    <th>End Chainage</th>
                                                    -->
                                                    <td>
                                                        @(sectionPln.RoadSection.SurfaceType != null ? sectionPln.RoadSection.SurfaceType.Name : "")
                                                    </td>
                                                    <td>
                                                        @(sectionPln.WorkCategory != null ? sectionPln.WorkCategory.Name : "")
                                                    </td>
                                                    <td>
                                                        @(sectionPln.FundingSource != null ? sectionPln.FundingSource.Name: "")
                                                    </td>
                                                    <td>
                                                        @(sectionPln.FundType != null ? sectionPln.FundType.Name : "")
                                                    </td>
                                                    <td>
                                                        @(sectionPln.ExecutionMethod != null ? sectionPln.ExecutionMethod.Name : "")
                                                    </td>
                                                    <td>
                                                        KSH @sectionPln.TotalEstimateCost.ToString("N")
                                                    </td>
                                                    <td>
                                                        @(sectionPln.RevisionStatus == false ? "Original" : "Revised")
                                                    </td>
                                                    <td>
                                                        @if (sectionPln.WorkplanApprovalBatch.ApprovalStatus == 0)
                                                        {
                                                            <span>Submission</span>
                                                        }
                                                        else if (sectionPln.WorkplanApprovalBatch.ApprovalStatus == 1)
                                                        {
                                                            <span> Internal Level 1</span>
                                                        }
                                                        else if (sectionPln.WorkplanApprovalBatch.ApprovalStatus == 2)
                                                        {
                                                            <span> Internal Level 2</span>
                                                        }
                                                        else if (sectionPln.WorkplanApprovalBatch.ApprovalStatus == 3)
                                                        {
                                                            <span> Internal Level 3</span>
                                                        }
                                                        else
                                                        {
                                                            <span> KRB Approval</span>
                                                        }
