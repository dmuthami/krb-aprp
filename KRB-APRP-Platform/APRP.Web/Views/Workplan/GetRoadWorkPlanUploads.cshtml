<!-- Content Area Starts -->
<div class="chat-application">
    <div class="chat-content-head">
        <div class="header-details">
            <h5 class="m-0 sidebar-title">Annual Road Work Plan Upload</h5>
        </div>
    </div>

    <!-- Scroll - vertical, dynamic height -->

    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card">
                <div class="card-content pb-1">
                    <div class="row">
                        <div class="col s12 m12 l12">
                            <a class="waves-effect waves-light btn-small" asp-controller="workplan" asp-action="Index" asp-route-viewname="agency-summary"><i class="material-icons left">arrow_back</i> Go to ARWP Summary</a>
                            <a class="waves-effect waves-light btn right" asp-controller="workplan" asp-action="Index" asp-route-viewname="agency-approval-summary-batch" asp-route-authorityname="@Model.Authority.Code"><i class="material-icons right">arrow_forward</i>Approvals</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-content">
                    <div class="row" id="product-four">
                        <div class="col m10 offset-s4">
                            <h6 class="strong">@Model.Authority.Name.ToUpper() ANNUAL ROAD WORKS PROGRAMME</h6>
                            <p class="black-text strong">CODE: <span class="green-text strong">@Model.Authority.Code.ToUpper()</span></p>
                            <hr>
                            <div class="row">
                                <div class="col s3"><p class="black-text strong">ALLOCATED BUDGET :</p></div>
                                <div class="col s3"><span class="green-text strong"> KSHS @(ViewBag.BudgetAllocated != null? ViewBag.BudgetAllocated.ToString("N") : "")</span></div>
                            </div>
                            <div class="row">
                                <div class="col s3"><p class="black-text strong">TOTAL WORKPLAN COST : </p></div>
                                <div class="col s3"><span class="green-text strong"> KSHS @ViewBag.totalWorkplanCost.ToString("N")</span></div>
                            </div>
                            <div class="row">
                                <div class="col s3"><p class="black-text strong">FINANCIAL YEAR :  </p></div>
                                <div class="col s3"><span class="green-text strong">@Model.FinancialYear.Code.ToUpper()</span></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="card #ffccbc deep-orange lighten-4">
                @if (ViewBag.fileNotSelected != null || ViewBag.invalidFile != null
      || ViewBag.financialYearNotSetInSystem != null
      || ViewBag.failedToSubmitForApproval != null || ViewBag.failedToApproveBudget != null)
                {
                    <div class="card-content">

                        @Html.Raw(ViewBag.fileNotSelected)
                        @Html.Raw(ViewBag.invalidFile)
                        @Html.Raw(ViewBag.financialYearNotSetInSystem)
                        @Html.Raw(ViewBag.failedToSubmitForApproval)
                        @Html.Raw(ViewBag.failedToApproveBudget)

                    </div>
                }
            </div>


            <div class="row">
                <div class="col s12">
                    <div class="card border-0" style="overflow: visible !important; ">
                        <div class="card-content">
                            @if (User.IsInRole("Approver.Approver1") && Model.Authority.Code != "KRB") //at first level, approval within the authority or county government ()
                            {
                                <div id="file-upload" class="section">
                                    <form id="frmWorkplanUpload" enctype="multipart/form-data" method="post" asp-controller="workplan" asp-action="UploadWorkplanFile">
                                        <h4 class="card-title mb-0">
                                            Please select workplan for upload of roadwork activities. Use this <a asp-controller="workplan" asp-action="admininstrationActivities" asp-route-agecyId="@ViewBag.Authority.ID">admin / operational activities</a> page to load admin and operational activities.
                                        </h4>
                                        <div class="row">
                                            <div class="col s6">
                                                <div class="file-field input-field">
                                                    <div class="btn btn-small">
                                                        <span>Browse</span>
                                                        <input type="file" id="SupportDocument" name="SupportDocument" />
                                                    </div>
                                                    <div class="file-path-wrapper">
                                                        <input class="file-path validate" type="text"
                                                               placeholder="Upload Workplan file" />
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="input-field col s3">
                                                @Html.DropDownListFor(m => m.FinancialYear.ID, ViewBag.FinancialYearList as SelectList, new { disabled = "disabled" })
                                                <label>Financial Year</label>
                                                @Html.HiddenFor(m => m.FinancialYear.ID)
                                            </div>
                                            <div class="input-field col s3">
                                                @Html.DropDownListFor(m => m.FundingSourceSubCode.ID, ViewBag.FundingSourceList as SelectList)
                                                <label>Funding Source</label>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="input-field col s12">
                                                <button class="btn cyan waves-effect waves-light right" type="submit" name="action">
                                                    Submit
                                                    <i class="material-icons right">send</i>
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <hr />
                            }
                            <div class="row">
                                <div class="col s12">
                                    <table class="striped responsive-table highlight">
                                        <thead>
                                            <tr class="black-text strong">
                                                <th>No.</th>
                                                <th>Upload Date</th>
                                                <th>Uploaded By</th>
                                                <th>Workplans Creation Status</th>
                                                <th>Workplan Cost</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                var count = 1;
                                                @foreach (var upload in Model.WorkplanUploads)
                                                {

                                                    if (Model.WorkplanUpload.ID == upload.ID)
                                                    {
                                                        //selected row
                                                        <tr class="#e1f5fe light-blue lighten-5">
                                                            <td>@count</td>
                                                            <td>@upload.CreationDate</td>
                                                            <td>@upload.CreatedBy.ToUpper()</td>
                                                            <td>
                                                                @if (upload.WorkplansCreated > 0)
                                                                {
                                                                    <span class="badge pink lighten-5 pink-text text-accent-2">Created</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge green lighten-5 green-text text-accent-4">Pending</span>
                                                                }
                                                            </td>
                                                            <td>Workplan Cost</td>
                                                            <td><a asp-controller="Workplan" asp-action="UploadWorkplans" asp-route-id="@upload.ID"> View Details</a></td>
                                                        </tr>
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td>@count</td>
                                                            <td>@upload.CreationDate</td>
                                                            <td>@upload.CreatedBy.ToUpper()</td>
                                                            <td>
                                                                @if (upload.WorkplansCreated > 0)
                                                                {
                                                                    <span class="badge pink lighten-5 pink-text text-accent-2">Created</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge green lighten-5 green-text text-accent-4">Pending</span>
                                                                }
                                                            </td>
                                                            <td>Workplan Cost</td>
                                                            <td><a asp-controller="Workplan" asp-action="UploadWorkplans" asp-route-id="@upload.ID"> View Details</a></td>
                                                        </tr>
                                                    }

                                                    count++;
                                                }
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            @if (Model.WorkplanUpload.ID > 0)
                            {
                                <div class="row">
                                    <div class="col s12">
                                        <div class="row card-content">
                                            <div class="col s12 m6 l12 xl12" style="overflow-x: auto;
                                                                        overflow-y: auto;
                                                                        white-space: nowrap;
                                                                        width: 100%;
                                                                ">
                                                <table class="responsive-table highlight">
                                                    <thead>
                                                        <tr class="black-text strong">
                                                            <th>ITEM NO</th>
                                                            <th>ROAD ID</th>
                                                            <th>SECTION ID</th>
                                                            <th>SECTION/ROAD NAME</th>
                                                            <th>SURFACE TYPE</th>
                                                            <th>WORKS CATEGORY</th>
                                                            <th>PLANNED SECTION LENGTH</th>
                                                            <th>ACTIVITY CODE</th>
                                                            <th>ACTIVITY DESCRIPTION</th>
                                                            <th>METHOD</th>
                                                            <th>UNIT MEASURE</th>
                                                            <th>PLANNED QUANTITY</th>
                                                            <th>PLANNED RATE</th>
                                                            <th>AMOUNT</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>

                                                        @if (Model.WorkplanUpload.WorkplanUploadSections.Any())
                                                        {
                                                            string roadId = "";
                                                            var countRow = 1;
                                                            var grandTotal = 0M;
                                                            var totalKM = 0d;
                                                            foreach (var section in Model.WorkplanUpload.WorkplanUploadSections.OrderBy(c => (c.RegionCounty, c.Constituency, c.CityMunicipality, c.NationalPark)))
                                                            {
                                                                //get the regionCounty
                                                                var regionCounty = section.RegionCounty;
                                                                if (!string.IsNullOrEmpty(regionCounty)) // not empty, set a new group
                                                                {
                                                                    <tr class="#e8eaf6 indigo lighten-5">
                                                                        <td colspan="14"><span class="black-text strong"> @regionCounty</span></td>
                                                                    </tr>
                                                                }

                                                                var constituency = section.Constituency;
                                                                if (!string.IsNullOrEmpty(constituency)) // not empty, set a new group
                                                                {
                                                                    <tr class="#e8eaf6 indigo lighten-5">
                                                                        <td colspan="14"><span class="black-text strong"> @constituency</span></td>
                                                                    </tr>
                                                                }

                                                                var cityMunicipality = section.CityMunicipality;
                                                                if (!string.IsNullOrEmpty(cityMunicipality)) // not empty, set a new group
                                                                {
                                                                    <tr class="#e8eaf6 indigo lighten-5">
                                                                        <td colspan="14"><span class="black-text strong"> @cityMunicipality</span></td>
                                                                    </tr>
                                                                }

                                                                var nationalPark = section.NationalPark;
                                                                if (!string.IsNullOrEmpty(nationalPark)) // not empty, set a new group
                                                                {
                                                                    <tr class="#e8eaf6 indigo lighten-5">
                                                                        <td colspan="14"><span class="black-text strong"> @nationalPark</span></td>
                                                                    </tr>
                                                                }


                                                                //check if there are activities
                                                                if (section.WorkplanUploadSectionActivities.Any())
                                                                {

                                                                    foreach (var activity in section.WorkplanUploadSectionActivities.OrderBy(a => a.ID))
                                                                    {
                                                                        <tr>
                                                                            @if (!string.Equals(roadId, section.SectionName))
                                                                            {
                                                                                //output the header
                                                                                <td> @((countRow++).ToString("N"))</td>
                                                                                <td> @(section.RoadId)</td>
                                                                                <td> @(section.SectionId)</td>
                                                                                <td> @(section.SectionName)</td>
                                                                                <td> @(section.SurfaceType)</td>
                                                                                <td> @(section.WorkCategory)</td>
                                                                                <td> @(section.PlannedSectionLength)</td>
                                                                            }
                                                                            else
                                                                            {
                                                                                //header is empty
                                                                                <td>&nbsp;</td>
                                                                                <td>&nbsp;</td>
                                                                                <td>&nbsp;</td>
                                                                                <td>&nbsp;</td>
                                                                                <td>&nbsp;</td>
                                                                                <td>&nbsp;</td>
                                                                                <td>&nbsp;</td>
                                                                            }
                                                                            @{
                                                                                //set the road ID to the outputted section ID, so that next time if repeated code above does not execute
                                                                                roadId = section.SectionName;
                                                                            }
                                                                            <td>@(activity.ActivityCode)</td>
                                                                            <td>@activity.AcivityDescription </td>
                                                                            <td>@activity.Technology</td>
                                                                            <td>@activity.UnitMeasure </td>
                                                                            <td>@activity.Quantity.ToString("N")</td>
                                                                            <td>@activity.PlannedRate.ToString("N")</td>
                                                                            <td>
                                                                                @{
                                                                                    var amount = (decimal)activity.PlannedRate * activity.Quantity;
                                                                                    <text>@amount.ToString("N")</text>
                                                                                }
                                                                            </td>
                                                                        </tr>
                                                                        grandTotal += ((decimal)activity.PlannedRate * activity.Quantity);

                                                                    }


                                                                }
                                                                totalKM += (section.PlannedSectionLength);

                                                                if (section.WorkplanUploadSectionActivities.Any())
                                                                {
                                                                    // generate summaries for subtotal
                                                                    var totalWorkplan = section.WorkplanUploadSectionActivities.Sum(a => ((decimal)a.PlannedRate * a.Quantity));
                                                                    <tr class="#eeeeee grey lighten-3 strong black-text">
                                                                        <td colspan="10" class="align-left">&nbsp; </td>
                                                                        <td colspan="3"> Subtotal (KSH) </td>
                                                                        <td>@(((double)totalWorkplan).ToString("N"))</td>
                                                                    </tr>


                                                                }
                                                            }
                                                            <tr class="#eeeeee grey lighten-3 strong black-text">
                                                                <td colspan="4" class="align-left">&nbsp; </td>
                                                                <td colspan="2"> Total Planned Length </td>
                                                                <td>@totalKM.ToString("N") </td>
                                                                <td colspan="3" class="align-left">&nbsp; </td>
                                                                <td colspan="3"> Grand Total (KSH) </td>
                                                                <td>@(((double)grandTotal).ToString("N")) </td>
                                                            </tr>

                                                            <tr class="#eeeeee grey lighten-3 strong black-text">
                                                                <td colspan="10" class="align-left">&nbsp; </td>
                                                                <td colspan="3"> Average Cost Per KM </td>
                                                                <td>@(((double)grandTotal/ totalKM).ToString("N")) </td>
                                                            </tr>

                                                        }
                                                        else
                                                        {
                                                            <tr>
                                                                <td colspan="14"><p>Workplan upload has empty sections</p></td>
                                                            </tr>
                                                        }

                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col s12">

                                        @if (Model.MissingRoadSections.Any())
                                        {
                                            <div class="card">
                                                <div id="missingActivitiesContainer" class="row card-content #fafafa grey lighten-5">
                                                    <div class="col s8 offset-s2">
                                                        <h4 class="card-title red-text">
                                                            Missing items in the file upload
                                                        </h4>
                                                        <table class="striped">
                                                            <thead>
                                                                <tr>

                                                                    <th>ROAD ID</th>
                                                                    <th>SECTION ID</th>
                                                                    <th>SECTION NAME</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var item in Model.MissingRoadSections)
                                                                {

                                                                    <tr>
                                                                        <td>@item.RoadId</td>
                                                                        <td>@item.RoadSectionId</td>
                                                                        <td>@item.RoadSectionName</td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>

                                                </div>
                                            </div>
                                        }
                                        @if (Model.MissingCategories.Any())
                                        {
                                            <div class="card">
                                                <div id="missingActivitiesContainer" class="row card-content #fafafa grey lighten-5">
                                                    <div class="col s6 offset-s3">
                                                        <h4 class="card-title red-text">
                                                            Missing categories in the file upload
                                                        </h4>
                                                        <table class="striped">
                                                            <thead>
                                                                <tr>

                                                                    <th>WORK CATEGORY CODE</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var item in Model.MissingCategories)
                                                                {

                                                                    <tr>
                                                                        <td>@item.WorkCategoryCode</td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>

                                                </div>
                                            </div>
                                        }
                                        @if (Model.MissingTechnologies.Any())
                                        {
                                            <div class="card">
                                                <div id="missingActivitiesContainer" class="row card-content #fafafa grey lighten-5">
                                                    <div class="col s6 offset-s3">
                                                        <h4 class="card-title red-text">
                                                            Missing technologies in the file upload
                                                        </h4>
                                                        <table class="striped">
                                                            <thead>
                                                                <tr>

                                                                    <th>TECHNOLOGY CODE</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var item in Model.MissingTechnologies)
                                                                {
                                                                    <tr>
                                                                        <td>@item</td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>

                                                </div>
                                            </div>
                                        }
                                        @if (Model.MissingActivities.Any())
                                        {
                                            <div class="card">
                                                <div id="missingActivitiesContainer" class="row card-content #fafafa grey lighten-5">
                                                    <div class="col s6 offset-s2">
                                                        <h4 class="card-title red-text">
                                                            Missing item activities in the file upload
                                                        </h4>
                                                        <table class="striped">
                                                            <thead>
                                                                <tr>

                                                                    <th>ITEM ACTIVITY CODE</th>
                                                                    <th>ITEM ACTIVITY DESCRIPTION</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var item in Model.MissingActivities)
                                                                {

                                                                    <tr>
                                                                        <td>@item.Code</td>
                                                                        <td>@item.ItemName</td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>

                                                </div>
                                            </div>
                                        }

                                        @if ((Model.MissingActivities.Count() == 0 && Model.MissingRoadSections.Count() == 0 && Model.MissingCategories.Count() == 0))
                                        {
                                            <div class="card #efebe9 brown lighten-5">
                                                <div class="row card-content">
                                                    <div class="col s12 m6 l12 xl12">
                                                        @if (User.IsInRole("Approver.Approver1") && ViewBag.Authority.Code != "KRB") //at first level, approval within the authority or county government ()
                                                        {
                                                            //check if user is in approver1 role (agency submitter)

                                                            if (Model.WorkplanUpload.WorkplansCreated == 0)
                                                            {
                                                                <a class="waves-effect waves-light btn-small" onclick="ConfirmRefresh(@Model.WorkplanUpload.ID);"><i class="material-icons left">autorenew</i> Reload / Clear Workplan Programme</a>
                                                                <a class="waves-effect waves-light btn right" href="#!" onclick="ShowApprovalForm(@Model.WorkplanUpload.ID)"><i class="material-icons right">send</i> Create Workplans</a>

                                                            }
                                                            else
                                                            {
                                                                <span class=" right strong black-text"> Workplans have been created in this upload file.</span>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <span class="right strong black-text">The workplan is still in upload preparation stage. It is yet to be submitted for workplan creation.</span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="card #efebe9 brown lighten-5">
                                                <div class="row card-content">
                                                    <div class="col s12 m6 l12 xl12">
                                                        @if (User.IsInRole("Approver.Approver1") && Model.Authority.Code != "KRB" && Model.WorkplanUpload.WorkplansCreated == 0) //at first level, approval within the authority or county government ()
                                                        {
                                                            //check if user is in approver1 role (agency submitter)
                                                            <a class="waves-effect waves-light btn-small" onclick="ConfirmRefresh(@Model.WorkplanUpload.ID);"><i class="material-icons left">autorenew</i> Reload / Clear Workplan Programme</a>
                                                        }
                                                        <span class="right strong black-text">The uploaded workplan has errors. Please ensure the errors are corrected for upload to be successful.</span>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                    </div>
                                </div>
                            }

                        </div>
                    </div>

                </div>
            </div>


        </div>
    </div>


</div>

@section vendorJS
{
    <script src="~/asset_default/app-assets/vendors/sweetalert/sweetalert.min.js" type="text/javascript"></script>
    <script src="~/asset_default/app-assets/vendors/dropify/js/dropify.min.js"></script>
    <script src="~/asset_default/app-assets/js/scripts/form-file-uploads.js" type="text/javascript"></script>
}

@section scripts

{
    <script src="~/asset_default/app-assets/js/scripts/app-contacts.js" type="text/javascript"></script>
    <script src="~/asset_default/app-assets/vendors/dropify/js/dropify.min.js"></script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {

            $.ajax({
                method: "POST",
                url: "/UserManagement/GetShortName",
                datatype: "json",
                data: {}
            })
                .done(function (data) {
                    //write json array object
                    console.log(data);
                    //Set Road Section ID to null

                    $("#idSpan").text(data.sn);
                    var Val1 = $("#idHomeAuthority").text();
                    $("#idHomeAuthority").text(Val1 + "-" + data.authorityCode);
                });
        });

        var ShowApprovalForm = function (uploadId) {
            swal({
                title: "Confirm!",
                text: "You are about to create the workplans uploaded, are you sure?",
                icon: 'warning',
                dangerMode: true,
                confirmButtonColor: "#DD6B55",
                buttons: {
                    cancel: 'No, Please!',
                    plan: 'Yes, Create Workplan.'
                }
            }).then(function (willPlan) {
                if (willPlan) {
                    $.ajax(
                        {
                            type: "POST",
                            url: "/workplan/CreateUploadWorkplan",
                            data: { uploadId: uploadId },
                            success: function (data) {
                                if (data.success) {

                                    swal({
                                        title: "Success",
                                        text: "Workplans have been created successfully!",
                                        timer: 1500,
                                        icon: "success",
                                        buttons: false
                                    }).then(function () {
                                        window.location.href = data.href;
                                    });
                                }
                                else {
                                    swal(data.message, {
                                        title: 'Error Occured',
                                        icon: "error"
                                    });
                                }
                            }
                        }
                    );
                } else {
                    //do nothing
                }
            });
        }

        var ConfirmRefresh = function (workplanUploadId) {
            swal({
                title: "Are you sure?",
                text: "The data will be cleared and you will have to laod upload file afresh!",
                icon: 'warning',
                dangerMode: true,
                buttons: {
                    cancel: 'No, Please!',
                    delete: 'Yes, Delete It'
                }
            }).then(function (willDelete) {
                if (willDelete) {

                    $.ajax(
                        {
                            type: "POST",
                            url: "/workplan/UploadWorkplanRefresh",
                            data: { workplanUploadId: workplanUploadId },
                            success: function (data) {
                                if (data.success) {
                                    swal({
                                        title: "Success",
                                        text: "Record(s) have been removed successfully!",
                                        timer: 2500,
                                        icon: "success",
                                        buttons: false
                                    }).then(function () {
                                        window.location.href = data.href;
                                    });
                                }
                                else {
                                    swal(data.message, {
                                        title: 'Error Occured',
                                        icon: "error"
                                    });
                                }
                            }
                        }
                    );
                } else {
                    swal("Your upload data is safe", {
                        title: 'Cancelled',
                        icon: "error",
                    });
                }
            });
        }
    </script>

}
