        </div>
    </div>
    <div class="row">
        <div class="col s12 m6 l12">
            <div class="row">
                <div class="col s12 m6 l12 xl12">
                    <div class="card  card-default #f1f8e9 light-green lighten-5">
                        <div class="card-content">
                            <div class="row section">
                                <div class="col s6">
                                    <p>
                                        <h4 class="card-title strong black-text">
                                            Total Allocated Budget for Road Works :
                                            <span class="#eeeeee grey lighten-3 strong  black-text">

                                                KSHS @(ViewBag.BudgetAllocated != null ? ViewBag.BudgetAllocated.ToString("N") : "0.00")
                                            </span>
                                        </h4>
                                    </p>
                                </div>
                                <div class="col s6">
                                    <p>
                                        <h4 class="card-title strong black-text">
                                            Budget Balance : <span class="#eeeeee grey lighten-3 strong  black-text">
                                                @{
                                                    var remainingBudget = 0.0;

                                                    @if (ViewBag.BudgetAllocated != null && ViewBag.totalWorkplanCost != null)
                                                    {
                                                        remainingBudget = (ViewBag.BudgetAllocated - ViewBag.totalWorkplanCost);
                                                    }
                                                }
                                                KSHS @remainingBudget.ToString("N")
                                            </span>
                                            @if (remainingBudget < 0)
                                            {
                                                <span class="#e3f2fd blue lighten-5 right"> Total budget has been exceeded.</span>
                                            }
                                        </h4>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s12 m6 l12 xl12">

                    <div class="card-content  pb-1">
                        <div class="card card card-default scrollspy" style="overflow: visible !important; ">
                            <div class="section card-content">
                                <h5 class="card-title">Planning Information</h5>

                                <div class="row">
                                    <div class="input-field col m3 s6">
                                        @Html.DropDownListFor(m => m.SubmitNewWorkplanModel.FinancialYear.ID, ViewBag.FinancialYearList as SelectList, new { disabled = "disabled" })
                                        <label>Financial Year</label>
                                    </div>
                                    <div class="input-field col m3 s6">
                                        @Html.DropDownListFor(m => m.SubmitNewWorkplanModel.FundingSource.ID, ViewBag.FundingSourceList as SelectList)
                                        <label>Funding Source</label>
                                    </div>
                                    <div class="input-field col m3 s6">
                                        @Html.DropDownListFor(m => m.SubmitNewWorkplanModel.WorkCategory.ID, ViewBag.WorkCategoryList as SelectList, "Select Work Category")
                                        <label>Work Category</label>
                                    </div>
                                    <div class="input-field col m3 s6">
                                        @Html.DropDownListFor(m => m.SubmitNewWorkplanModel.ExecutionMethod.ID, ViewBag.ExecutionMethodList as SelectList, "Select Execution Method")
                                        <label>Execution Method</label>
                                    </div>
                                </div>
                            </div>

                            <ul class="collapsible">
                                <li>
                                    <div class="collapsible-header"> Prioritized roads for planning</div>
                                    <div class="collapsible-body">
                                        <div class="section card-content">
                                            <table id="page-length-option2" class="subscription-table responsive-table striped">
                                                <thead>
                                                    <tr>
                                                        <th>Road Number</th>
                                                        <th>Road Name</th>
                                                        <th>IRI</th>
                                                        <th>ARD</th>
                                                        <th>Priority Rate</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var arics in Model.AricsData)
                                                    {
                                                        long RoadConditionId = 0;
                                                        <tr>
                                                            <td>@arics.Road.RoadNumber</td>
                                                            <td>@arics.Road.RoadName</td>
                                                            <td>@String.Format("{0:0.00}", @arics.IRI) </td>
                                                            <td>@String.Format("{0:0.00}", @arics.RateOfDeterioration) </td>
                                                            <td>
                                                                @{
                                                                    if (arics.Road.RoadConditions.Any())
                                                                    {
                                                                        var aric = arics.Road.RoadConditions.Where(w => w.Year.ToString().ToLower() == Model.FinancialYear.Code.Split("/")[0].ToString().ToLower());
                                                                        if (aric.Any())
                                                                        {
                                                                            string x = null;
                                                                            try
                                                                            {
                                                                                x = @aric.FirstOrDefault().PriorityRate.ToString();
                                                                                RoadConditionId = @aric.FirstOrDefault().ID;
                                                                            }
                                                                            catch (Exception E)
                                                                            {
                                                                            }
                                                                            @: @x
                                                                        }
