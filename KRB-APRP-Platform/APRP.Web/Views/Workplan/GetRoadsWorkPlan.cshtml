    @section scripts

    {


    <script>
        //Call function to load data
        $(document).ready(function() {
            //Set the collapsible
            $('.collapsible').collapsible();

            //Set datatable formatting

            $.ajax({
                method: "POST",
                url: "/UserManagement/GetShortName",
                datatype: "json",
                data: {}
            })
                .done(function(data) {
                    $("#idSpan").text(data.sn);
                    var Val1 = $("#idHomeAuthority").text();
                    $("#idHomeAuthority").text(Val1 + "-" + data.authorityCode); $("#idGlobalAuthority").text(data.authorityName);
                });

            "use strict";

            $('select').formSelect();
            /*
             * DataTables - Tables
             */
            var calcDataTableHeight = function() {
                return $(window).height() - 275 + "px";
            };

            var table = $("#data-table-roads").DataTable({
                sScrollY: calcDataTableHeight(),
                scrollCollapse: true,
                paging: true,
                responsive: true,
                lengthMenu: [5],
                "bLengthChange": false,
                "bFilter": true,
                "bInfo": false,
                aoColumns: [
                    {
                        bSortable: false
                    },
                    null,
                    null,
                    null,
                    null,
                    {
                        bSortable: false
                    }
                ]
            });

            $('#data-table-roads tbody').on('click', 'tr', function() {
                if ($(this).hasClass('selected')) {
                    $(this).removeClass('selected');
                }
                else {
                    table.$('tr.selected').removeClass('selected');
                    $(this).addClass('selected');
                }
            });

        });
        //select section to plan
        var selectWorkSection = function(roadId) {
            $('#SelectedRoadId').val(roadId);
            var urlLocation = "/Workplan/GetRoadSectionsSelect?roadId=" + roadId;
            $("#roadSections").load(urlLocation, function() {
                //$("#modalViewWorkplanId").modal('open');
            });
        }

        //submit review the workplan for submission
        var GetPlanUpdate = function(sectionId, flagNew) {
            //if flagNew = "NEW", it means a new workplan for the section is being created

            //validate data for planning has been selected, financial year, funding source, work category and execution method
            var financialYearId = $("#SubmitNewWorkplanModel_FinancialYear_ID").val();
            var fundingSourceId = $("#SubmitNewWorkplanModel_FundingSource_ID").val();
            var workCategoryId = $("#SubmitNewWorkplanModel_WorkCategory_ID").val();
            var executionMethodId = $("#SubmitNewWorkplanModel_ExecutionMethod_ID").val();

            if (financialYearId === '' || financialYearId === null || fundingSourceId === '' || fundingSourceId === null || workCategoryId === '' || workCategoryId === null || executionMethodId === '' || executionMethodId === null) {
                swal({
                    title: 'Warning',
                    text: 'Please note you cannot plan without setting the Financial Year, Funding Source, Work Category and Execution Method',
                    icon: 'warning'
                });
            }
            else {
                //alert(fundingSourceId + " " + financialYearId + " " + workCategoryId + " " + executionMethodId);
                InitiateWorkplanCreation(sectionId, financialYearId, fundingSourceId, workCategoryId, executionMethodId);
            }
        }


        //Send request to sever to post create the work plan
        var InitiateWorkplanCreation = function(sectionId, financialYearId, fundingSourceId, workCategoryId, executionMethodId) {
            $.ajax(
                {
                    type: "POST",
                    url: "/Workplan/CreateSectionWorkplan",
                    data: {
                        sectionId: sectionId,
                        financialYearId: financialYearId,
                        fundingSourceId: fundingSourceId,
                        workCategoryId: workCategoryId,
                        executionMethodId: executionMethodId
                    },
                    success: function(data) {
                        console.log(data);
                        if (data.success) {
                            /*swal({
                                title: "Success",
                                text: data.message,
                                timer: 2500,
                                icon: "success",
                                buttons: false
                            }).then(function () {
                                window.location.href = data.href;
                            });
                            */
                            swal({
                                title: "Sucess",
                                text: data.message,
                                icon: 'success',
                                dangerMode: true,
                                buttons: {
                                    cancel: 'No, Please!',
                                    plan: 'Yes, Add Activities.'
                                }
                            }).then(function(willPlan) {
                                if (willPlan) {
                                    window.location.href = data.href;
                                } else {
                                    var hiddenRoadId = $('#SelectedRoadId').val();
                                    selectWorkSection(hiddenRoadId);
                                }
                            });
                        }
                        else {
                            swal(data.message, {
                                title: 'Cancelled',
                                icon: "error",
                            });
                        }
                    }
                });
        }
    </script>
