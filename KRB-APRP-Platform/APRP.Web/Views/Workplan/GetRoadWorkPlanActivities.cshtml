<!-- Content Area Starts -->
<div class="section">
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card">
                <div class="card-content">
                    <a class="waves-effect waves-light btn-small" asp-controller="workplan" asp-action="GetRoadWorkPlan" asp-route-id="@Model.RoadWorkSectionPlan.Road.ID"><i class="material-icons left">arrow_back</i> View Work plans for road : @Model.RoadWorkSectionPlan.Road.RoadName</a>
                    <a class="waves-effect waves-light btn-small right" asp-controller="workplan" asp-action="GetRoadsForWorkPlan"><i class="material-icons left">add_circle</i> Create Workplan For New Road</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Scroll - vertical, dynamic height -->
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card  card-default #f1f8e9 light-green lighten-5">
                <div class="card-content">
                    <div class="row section">
                        <div class="col s6">
                            <p>
                                <h4 class="card-title strong black-text">
                                    Total Allocated Budget for Road Works :
                                    <span class="#eeeeee grey lighten-3 strong  black-text">

                                        KSHS @(ViewBag.BudgetAllocated != null ? ViewBag.BudgetAllocated.ToString("N") : "0.00")
                                    </span>
                                </h4>
                            </p>
                            <p>
                                <h4 class="card-title strong black-text">
                                    Funding Source :
                                    <span class="#eeeeee grey lighten-3 strong  black-text">
                                        @if (Model.RoadWorkSectionPlan.FundingSource != null)
                                        {
                                            <span>@Model.RoadWorkSectionPlan.FundingSource.Name</span>
                                        }
                                        else
                                        {
                                            <span>No Funding source has been set up for the work plan.</span>
                                        }
                                    </span>
                                </h4>
                            </p>
                        </div>
                        <div class="col s6">
                            <p>
                                <h4 class="card-title strong black-text">
                                    Budget Balance : <span class="#eeeeee grey lighten-3 strong  black-text">
                                        @{
                                            var remainingBudget = 0.0;

                                            @if (ViewBag.BudgetAllocated != null && ViewBag.totalWorkplanCost != null)
                                            {
                                                remainingBudget = (ViewBag.BudgetAllocated - ViewBag.totalWorkplanCost);
                                            }
                                        }
                                        KSHS @remainingBudget.ToString("N")
                                    </span>
                                    @if (remainingBudget < 0)
                                    {
                                        <span class="#e3f2fd blue lighten-5 right"> Total budget has been exceeded.</span>
                                    }
                                </h4>
                            </p>
                            <p>
                                <h4 class="card-title strong black-text">
                                    Total Workplan Cost :
                                    <span class="#eeeeee grey lighten-3 strong  black-text">
                                        @{
                                            var totalWorkplanCost = 0.0;
                                            var totalInstructedWorks = 0.0;
                                            if (Model.RoadWorkSectionPlan.PlanActivityPBCs != null)
                                            {
                                                totalInstructedWorks = (double)(Model.RoadWorkSectionPlan.PlanActivities.Sum(p => (p.Quantity * (decimal)(p.Rate))));
                                            }

                                            var totalPBCs = 0.0;
                                            if (Model.RoadWorkSectionPlan.PlanActivityPBCs != null)
                                            {
                                                totalPBCs = Model.RoadWorkSectionPlan.PlanActivityPBCs.Sum(p => (p.PlannedKM * p.CostPerKMPerMonth));
                                            }

                                            totalWorkplanCost = totalInstructedWorks + totalPBCs;

                                        }
                                        KSHS @totalWorkplanCost.ToString("N")
                                    </span>
                                </h4>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card card-default">
                <div class="card-content" id="work-section-select">
                    <h4 class="card-title">
                        Road work activities for section : <span class="strong"> @Model.RoadWorkSectionPlan.RoadSection.SectionName</span> on road  <span class="strong"> @Model.RoadWorkSectionPlan.Road.RoadName</span>
                    </h4>
                    <hr />
                    <br />
                    <div class="row">
                        <div class="col s12 p-1">
                            <table id="data-table-unit-activities" class="striped display">
                                <thead class="table-header">
                                    <tr>
                                        <th>Start Chain</th>
                                        <th>End Chain</th>
                                        <th>Technology</th>
                                        <th>Item Code</th>

                                        <th>Description</th>
                                        <th>Unit Description</th>
                                        <th>Unit Measure</th>
                                        <th>Quantity</th>
                                        <th>Rate</th>
                                        <th>Amount</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.RoadWorkSectionPlan.PlanActivities.Any())
                                    {
                                        if (Model.RoadWorkSectionPlan.PlanActivities.Where(i => i.ItemActivityUnitCost.OverheadRoutineImprovement == "OV").Any())
                                        {
