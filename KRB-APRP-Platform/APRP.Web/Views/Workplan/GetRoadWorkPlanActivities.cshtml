        $("#modalViewPlanEditBodyDivId").load(urlLocation, function () {
            $("#modalViewPlanId").modal('open');
        });
    }


    var RemoveActivityConfirm = function (activityId, flag) {

        swal({
            title: "Kindly confirm?",
            text: "The item activity will be removed from the workplan!",
            buttons: {
                cancel: true,
                delete: 'Yes, Remove'
            }
        }).then(function (willDelete) {
            if (willDelete) {
                RemoveActivity(activityId, flag);
            }
        });
    }
    var RemoveActivity = function (activityId, flag) {
        $.ajax(
            {
                type: "POST",
                url: "/Workplan/RemoveWorkplanActivity",
                data: {
                    activityId: activityId,
                    flag: flag
                },
                success: function (data) {
                    if (data.success) {
                        window.location.hash = 'workSections';
                        window.location.reload(false);
                    }
                    else {
                        swal(data.message, {
                            title: 'Cancelled',
                            icon: "error",
                        });
                    }
                }
            });
    }
    var ShowSectionPlanPBCActivityEdit = function (activityId) {
        var urlLocation = "/Workplan/ShowRoadWorkPlanPBCLineAddEdit?SectionPlanActivityId=" + activityId;

        $("#modalViewPlanEditBodyPBCDivId").load(urlLocation, function () {
