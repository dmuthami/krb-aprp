                                                @Html.LabelFor(m => m.Contractor.BankAccountNumber, new { @class = "active" })
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s12">
                                                @if (Model.Contractor != null)
                                                {
                                                    if (Model.Contractor.ID > 0)
