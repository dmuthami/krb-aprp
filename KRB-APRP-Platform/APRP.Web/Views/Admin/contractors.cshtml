<!-- Content Area Starts -->
<div class="chat-application">
    <div class="chat-content-head">
        <div class="header-details">
            <h5 class="m-0 sidebar-title">Administration Contractors setup</h5>
        </div>
    </div>

    <!-- Scroll - vertical, dynamic height -->
    <div class="row">
        <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">
                        Define the road contractors
                    </h4>
                    <div class="row">
                        <div class="col s3">
                            <table id="data-table-contractors" class="striped responsive-table highlight" role="grid">
                                <thead>
                                    <tr>
                                        <th>KRA PIN</th>
                                        <th>Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var contractor in Model.Contractors)
                                    {
                                        if (contractor.ID == Model.Contractor.ID)
                                        {
                                            <tr role="row" style="background-color:lightgreen">
                                                <td> <a asp-controller="Admin" asp-action="Contractors" asp-route-id="@contractor.ID">@contractor.KRAPin</a>  </td>
                                                <td>@contractor.Name</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            <tr role="row">
                                                <td> <a asp-controller="Admin" asp-action="Contractors" asp-route-id="@contractor.ID">@contractor.KRAPin</a> </td>
                                                <td>@contractor.Name</td>
                                            </tr>
                                        }

                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="col s9">
                            <h4 class="card-title">Road Contractor Details</h4>
                            <div id="contractorView">
                                <div class="row">
                                    <div class="col s12">
                                        @Html.HiddenFor(m => m.Contractor.ID)
                                        <div class="row">
                                            <div class="input-field col m6 s12">
                                                @Html.TextBoxFor(m => m.Contractor.KRAPin, new { @class = "validate active", @readonly = "readonly" })
                                                @Html.LabelFor(m => m.Contractor.KRAPin, new { @class = "active" })
                                            </div>

                                            <div class="input-field col m6 s12">
                                                @Html.TextBoxFor(m => m.Contractor.Name, new { @class = "validate active", @readonly = "readonly" })
                                                @Html.LabelFor(m => m.Contractor.Name, new { @class = "active" })
                                            </div>

                                            <div class="input-field col m6 s12">
                                                @Html.TextBoxFor(m => m.Contractor.Telephone, new { @class = "validate active", @readonly = "readonly" })
                                                @Html.LabelFor(m => m.Contractor.Telephone, new { @class = "active" })
                                            </div>
                                            <div class="input-field col m6 s12">
                                                @Html.TextBoxFor(m => m.Contractor.Email, new { @class = "validate active", @readonly = "readonly" })
                                                @Html.LabelFor(m => m.Contractor.Email, new { @class = "active" })
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col m6 s12">
                                                @Html.TextBoxFor(m => m.Contractor.POBox, new { @class = "validate active", @readonly = "readonly" })
                                                @Html.LabelFor(m => m.Contractor.POBox, new { @class = "active" })
                                            </div>

                                            <div class="input-field col m6 s12">
                                                @Html.TextBoxFor(m => m.Contractor.Town, new { @class = "validate active", @readonly = "readonly" })
                                                @Html.LabelFor(m => m.Contractor.Town, new { @class = "active" })
                                            </div>
                                        </div>

                                        <h4 class="card-title">Bank Details</h4>
                                        <div class="row">
                                            <div class="input-field col m6 s12">
                                                @Html.TextBoxFor(m => m.Contractor.BankName, new { @class = "validate active", @readonly = "readonly" })
                                                @Html.LabelFor(m => m.Contractor.BankName, new { @class = "active" })
                                            </div>
                                            <div class="input-field col m6 s12">
                                                @Html.TextBoxFor(m => m.Contractor.BankBranchName, new { @class = "validate active", @readonly = "readonly" })
                                                @Html.LabelFor(m => m.Contractor.BankBranchName, new { @class = "active" })
                                            </div>
                                            <div class="input-field col m6 s12">
                                                @Html.TextBoxFor(m => m.Contractor.BankBranchCode, new { @class = "validate active", @readonly = "readonly" })
                                                @Html.LabelFor(m => m.Contractor.BankBranchCode, new { @class = "active" })
