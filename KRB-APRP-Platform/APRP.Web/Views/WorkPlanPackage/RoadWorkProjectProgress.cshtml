<!-- Content Area Starts -->
<div class="chat-application">
    <div class="chat-content-head">
        <div class="header-details">
            <h5 class="m-0 sidebar-title">Project progress reporting</h5>
        </div>
    </div>

    <!-- Scroll - vertical, dynamic height -->

    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">
                        Packaging of Road Workplans
                    </h4>
                    <table id="data-table-packages" class="striped display" role="grid">
                        <thead>
                            <tr>
                                <th>Package Number</th>
                                <th>Package Name</th>
                                <th>Engineer's Estimate</th>
                                <th>% Contigencies</th>
                                <th>No. Of Workplans</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Contracts != null)
                            {
                                foreach (var contract in Model.Contracts)
                                {
                                    if (contract.ID == Model.Contract.ID)
                                    {
                                        <tr role="row" style="background-color:#c5c2c2">
                                            <td>
                                                <a asp-controller="WorkPlanPackage" asp-action="ProjectProgressDetails" asp-route-id="@contract.ID">@contract.WorkPlanPackage.Code</a>
                                            </td>

                                            <td>@contract.WorkPlanPackage.Name</td>
                                            <td>KSH @contract.WorkPlanPackage.EngineerEstimate.ToString("N")</td>
                                            <td>@contract.WorkPlanPackage.Contigencies.ToString("N")</td>
                                            <td>@(contract.WorkPlanPackage.WorkpackageRoadWorkSectionPlans != null ? contract.WorkPlanPackage.WorkpackageRoadWorkSectionPlans.Count().ToString("N") : "0")</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr role="row">
                                            <td>
                                                <a asp-controller="WorkPlanPackage" asp-action="ProjectProgressDetails" asp-route-id="@contract.ID">@contract.WorkPlanPackage.Code</a>
                                            </td>

                                            <td>@contract.WorkPlanPackage.Name</td>
                                            <td>KSH @contract.WorkPlanPackage.EngineerEstimate.ToString("N")</td>
                                            <td>@contract.WorkPlanPackage.Contigencies.ToString("N")</td>
                                            <td>@(contract.WorkPlanPackage.WorkpackageRoadWorkSectionPlans != null ? contract.WorkPlanPackage.WorkpackageRoadWorkSectionPlans.Count().ToString("N") : "0")</td>
                                        </tr>
                                    }
                                }
                            }
                            else
                            {
                                <tr role="row">
                                    <td colspan="4">
                                        There are no packages created. Please create packages.
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <div class="card-content align-right">

                    @if (Model.Contract.WorkPlanPackage != null)
                    {
                        <a asp-controller="WorkPlanPackage" asp-action="ContractDetails" asp-route-id="@Model.Contract.ID" class="waves-effect waves-light btn-small"><i class="material-icons left">arrow_back</i> Contract Details</a>

                        <a class="waves-effect waves-light btn-small" asp-controller="WorkPlanPackage" asp-action="ProjectPaymentCertificates" asp-route-id="@Model.Contract.ID"><i class="material-icons left">payment</i> Project Payment Certificates</a>

                    }
                    <a class="waves-effect waves-light btn-small" asp-controller="WorkPlanPackage" asp-action="FinancialProgressDetails" asp-route-authorityId="@Model.Authority.ID" asp-route-progressEntryId="0" data-i18n=""><i class="material-icons left">payment</i><span>Financial Progress</span></a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            @if (Model.Contract.ID > 0)
            {
                <div class="card">
                    <div class="card-content">
                        <h4 class="card-title">Annual Work plan road sections</h4>
                        <table id="data-table-unit-groups" class="striped display">
                            <thead>
                                <tr>
                                    <th>Constituency</th>
                                    <th>Road Code</th>
                                    <th>Section Name</th>
                                    <th>Length</th>
                                    <th>Planned KM</th>
                                    <th>Achieved KM</th>
                                    <th>Work Category</th>
                                    <th>Funding Source</th>
                                    <th>Execution Method</th>
                                    <th>Surface Type</th>
                                    <th>Workplan Cost</th>
                                    <th>Original Contract Sum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Contract.WorkPlanPackage != null)
                                {
                                    if (Model.Contract.WorkPlanPackage.WorkpackageRoadWorkSectionPlans != null)
                                    {
                                        foreach (var sectionPlan in Model.Contract.WorkPlanPackage.WorkpackageRoadWorkSectionPlans)
