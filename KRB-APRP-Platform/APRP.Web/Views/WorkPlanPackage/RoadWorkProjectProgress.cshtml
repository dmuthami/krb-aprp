    var DownloadMonthlyProgressSummary = function (contractId) {

        $.ajax({
            cache: false,
            url: '/WorkPlanPackage/DownloadMonthlyProgressSummary',
            data: {
                contractId: contractId
            },
            success: function (data) {
                if (data.success) {
                    window.location.href = data.href;
                }
                else {
                    swal(data.message, {
                        title: 'Cancelled',
                        icon: "error",
                    });
                }
            }
        });
    }

    var DownloadQuarterlyProgressSummary = function (contractId) {
        $.ajax({
            cache: false,
            url: '/WorkPlanPackage/DownloadQuarterlyProgressSummary',
            data: {
                contractId: contractId
            },
            success: function (data) {
                if (data.success) {
                    window.location.href = data.href;
                }
                else {
                    swal(data.message, {
                        title: 'Cancelled',
                        icon: "error",
                    });
                }
            }
        });
