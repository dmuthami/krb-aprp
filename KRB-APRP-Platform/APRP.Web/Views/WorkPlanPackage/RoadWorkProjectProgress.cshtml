        var urlLocation = "/Workplan/GetSectionWorkplanEditView?SectionPlanId=" + sectionPlanId + "&flagNew=" + flagNew;
        $("#modalViewBodyDivPlanId").load(urlLocation, function () {
            $("#modalViewPlanEditId").modal('open');
        });
