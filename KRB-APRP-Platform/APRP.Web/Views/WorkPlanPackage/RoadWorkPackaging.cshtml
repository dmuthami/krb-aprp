            $("#modalViewId").modal('open');
        });
    }


    //getting the package edit form
    var EditPackage = function (workpackageId) {
        var urlLocation = "/WorkPlanPackage/EditPackage?ID=" + workpackageId;
        $("#modalViewBodyPackageDiv").load(urlLocation, function () {
            $("#modalViewPackageId").modal('open');
        });
    }


    var RemoveWorkPackageConfirm = function (workpackageId) {

        swal({
            title: "Kindly confirm?",
            text: "You are about to delete the package!",
            buttons: {
                cancel: true,
                delete: 'Yes, Delete'
            }
        }).then(function (willDelete) {
            if (willDelete) {
                RemoveWorkPackage(workpackageId);
            }
        });
    }

    var RemoveWorkPackage = function (workpackageId) {
        $.ajax(
            {
                type: "POST",
                url: "/WorkPlanPackage/RemoveWorkPackage",
                data: {
                    workpackageId: workpackageId
                },
                success: function (data) {
                    console.log(data);
                    if (data.success) {
                        swal({
                            title: "Success",
                            text: "Workpackage removed successfully!",
