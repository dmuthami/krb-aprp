<div class="chat-application">
    <div class="chat-content-head">
        <div class="header-details">
            <h5 class="m-0 sidebar-title">Contract Packaging of Road Activities</h5>
        </div>
    </div>

    <!-- Scroll - vertical, dynamic height -->

    <div class="row">

        <div class="col s12 m3 l3">
            <div class="card">
                <div id="editWorkPackage" class="card-content">
                    <form id="workplanPackageForm" class="formValidate">
                        @Html.HiddenFor(m => m.WorkPlanPackage.ID)
                        @if (Model.WorkPlanPackage.ID > 0)
                        {
                            <div class="row">
                                <div class="input-field col m12 s12">
                                    @Html.TextBoxFor(m => m.WorkPlanPackage.Code, new { @readonly = "readonly" })
                                    @Html.LabelFor(m => m.WorkPlanPackage.Code)
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col m12 s12">
                                    @Html.TextBoxFor(m => m.WorkPlanPackage.Name, new { @readonly = "readonly" })
                                    @Html.LabelFor(m => m.WorkPlanPackage.Name)
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col m12 s12">
                                    @Html.TextBoxFor(m => m.WorkPlanPackage.Contigencies, new { @readonly = "readonly" })
                                    @Html.LabelFor(m => m.WorkPlanPackage.Contigencies)
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field  col m12 s12">
                                    <div class="card-action">
                                        <a class="waves-effect waves-light btn-small" asp-controller="WorkPlanPackage" asp-action="RoadWorkPackaging" asp-route-id="0"><i class="material-icons right">note_add</i> New Package </a>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row">
                                <div class="input-field col m12 s12">
                                    @Html.TextBoxFor(m => m.WorkPlanPackage.Code, new { @class = "validate", @required = "required", aria_required = "true" })
                                    @Html.LabelFor(m => m.WorkPlanPackage.Code)
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col m12 s12">
                                    @Html.TextBoxFor(m => m.WorkPlanPackage.Name, new { @class = "validate", @required = "required", aria_required = "true" })
                                    @Html.LabelFor(m => m.WorkPlanPackage.Name)
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col m12 s12">
                                    @Html.TextBoxFor(m => m.WorkPlanPackage.Contigencies, new { @readonly = "readonly" })
                                    @Html.LabelFor(m => m.WorkPlanPackage.Contigencies)
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <div class="card-footer card-alert white-text  align-right">
                                        <div class="card-action">
                                            <a class="waves-effect waves-light btn-small right" href="#" onclick="SaveWorkplanPackage()"><i class="material-icons right">send</i> Save Package</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }


                    </form>
                </div>
            </div>
        </div>
        <div class="col s12 m3 l9">
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">
                        Packaging of Road Workplans
                    </h4>
                    <table id="data-table-packages" class="striped display" role="grid">
                        <thead>
                            <tr>
                                <th>Package Number</th>
                                <th>Package Name</th>
                                <th>Engineer's Estimate</th>
                                <th>No. Of Workplans</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.WorkPlanPackages != null)
                            {
                                foreach (var workPlanPackage in Model.WorkPlanPackages)
                                {

                                    if (workPlanPackage.ID == Model.WorkPlanPackage.ID)
                                    {
                                        <tr role="row" style="background-color:#c5c2c2">
                                            <td>
                                                <a asp-controller="WorkPlanPackage" asp-action="RoadWorkPackaging" asp-route-id="@workPlanPackage.ID">@workPlanPackage.Code</a>
                                            </td>

                                            <td>@workPlanPackage.Name</td>
                                            <td>KSH @workPlanPackage.EngineerEstimate.ToString("N")</td>
                                            <td>@(workPlanPackage.WorkpackageRoadWorkSectionPlans != null ? workPlanPackage.WorkpackageRoadWorkSectionPlans.Count().ToString("N") : "0")</td>
