<script type="text/javascript">

    var SaveWorkplanPackage = function () {
        var sendForm = $("#workplanPackageForm").serialize();
        $.ajax(
            {
                type: "POST",
                url: "/WorkPlanPackage/SaveWorkplanPackage",
                data: sendForm,
                success: function (data) {
                    if (data.success) {
                        swal({
                            title: "Success",
                            text: "Package created successfully!",
                            timer: 1500,
                            icon: "success",
                            buttons: false
                        }).then(function () {
                            window.location.href = data.href;
                        });
                    }
                    else {
                        swal(data.message, {
                            title: 'Cancelled',
                            icon: "error",
                        });
                    }
                }

            }
        );
    }

    var ContractPackage = function (workpackageId) {
        $.ajax(
            {
                type: "POST",
                url: "/WorkPlanPackage/ContractPackage",
                data: {
                    workpackageId: workpackageId
                },
                success: function (data) {
                    if (data.success) {
                        swal({
                            title: "Success",
                            text: "Package Contract Created!",
                            timer: 1500,
                            icon: "success",
                            buttons: false
                        }).then(function () {
                            window.location.href = data.href;
                        });
                    }
                    else {
                        swal(data.message, {
                            title: 'Cancelled',
                            icon: "error",
                        });
                    }
                }
            });

    }

