                </div>
            </div>
        </div>
    </div>
    <!--Invoice-->
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card #f5f5f5 grey lighten-4">
                <div class="card-content">
                    <h3 class="card-title"> Contract payment certificates </h3>
                    <div class="divider"></div>
                    <div class="invoice-header">
                        <div class="row section">
                            <div class="col s12 m6 l6">
                                <p class="black-text strong bold">CONTRACT NAME : @Model.Contract.WorkPlanPackage.Name</p>
                                <p class="black-text strong bold">CONTRACTOR : @(Model.Contract.Contractor != null ? Model.Contract.Contractor.Name : "")</p>

                            </div>
                            <div class="col s12 m6 l6">
                                <p class="black-text strong bold">CONTRACT SUM : KSH @Model.Contract.ContractSumPackage.ToString("N")</p>
                                <p class="black-text strong bold">REVISED CONTRACT SUM : KSH @Model.Contract.ContractRevisionSum.ToString("N")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card">
                <div class="card-content">
                    <div class="row">
                        <div class="col s12 m12 l12">
                            <h4 class="card-title">Road Work Activities for the certificate</h4>
                            <hr>
                            @if (Model.CertificateStatus == 0)
                            {
                                <a class="waves-effect waves-light btn btn-small" href="#!" onclick="MarkCertificateComplete(@Model.ID)"><i class="material-icons right">send</i>Complete Certificate Update </a>
                                <a class="waves-effect waves-light btn btn-small right" href="#!" onclick="GetContractActivities(@Model.ContractId)"><i class="material-icons right">add</i> Add Certificate Activities</a>
                            }
                            else
                            {
                                <span class="black-text strong bold"> Certificate is locked and cannot be edited.</span>
                            }

                        </div>
                    </div>

                    <div class="row">
                        <div class="col s12">
                            <br />
                            <div class="divider"></div>
                            <table id="data-table-unit-groups" class="striped display">
                                <thead>
                                    <tr>
                                        <th>Bill No</th>
                                        <th>Item Code</th>
                                        <th>Description</th>
                                        <th>Unit</th>
                                        <th>Package Quantity</th>
                                        <th>Bid Rate</th>
                                        <th>Bill Item Amount</th>
                                        <th>Cert. Quantity</th>
                                        <th>Cert. Qty %</th>
                                        <th>Total</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.PaymentCertificateActivities != null)
                                    {
                                        foreach (var act in Model.PaymentCertificateActivities)
                                        {
                                            <tr>
                                                <td>
                                                    @act.PlanActivity.ItemActivityUnitCost.ItemActivityGroup.BillNumber
                                                </td>
                                                <td>@act.PlanActivity.ItemActivityUnitCost.ItemCode</td>
                                                <td>@act.PlanActivity.ItemActivityUnitCost.Description</td>
                                                <td>@act.PlanActivity.ItemActivityUnitCost.UnitCode</td>
                                                <td>@act.PlanActivity.PackageQuantity</td>
                                                <td>@act.PlanActivity.BidRate</td>
                                                <td>KSH @act.PlanActivity.BillItemAmount.ToString("N")</td>
                                                <td>@act.Quantity</td>
                                                <td>
                                                    @{
                                                        var percentThis = Math.Round((double)(act.Quantity * 100 / act.PlanActivity.PackageQuantity));
                                                        <span>@percentThis.ToString("N")</span>
                                                    }
                                                </td>
                                                <td>
                                                    @{
                                                        var totalThis = (act.Quantity * act.PlanActivity.BidRate);
                                                        <span>@totalThis.ToString("N")</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (Model.CertificateStatus == 0)
                                                    {
                                                        <a href="#!" onclick="ShowCertificateActivityEditForm(@act.ID)"><i class="material-icons pink-text">mode_edit</i></a> <span>&nbsp;</span>
                                                        <a href="#!" onclick="RemveCertificateActivity(@act.ID)">
                                                            <i class="material-icons pink-text">delete</i>
