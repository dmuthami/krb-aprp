@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {

            $.ajax({
                method: "POST",
                url: "/UserManagement/GetShortName",
                datatype: "json",
                data: {}
            })
                .done(function (data) {
                    //write json array object
                    console.log(data);
                    //Set Road Section ID to null

                    $("#idSpan").text(data.sn);
                    var Val1 = $("#idHomeAuthority").text();
                    $("#idHomeAuthority").text(Val1 + "-" + data.authorityCode); $("#idGlobalAuthority").text(data.authorityName);
                });
        });


        //Pull the contract plan activities for adding into the payment certificate
        //getting the selected rows
        var GetContractActivities = function (contractId) {
            var urlLocation = "/WorkPlanPackage/GetContractActivities?contractId=" + contractId;
            $("#modalViewBodyDiv").load(urlLocation, function () {
                $("#modalViewId").modal('open');
            });
        }

        var GetSelectedValues = function (paymentCertificateId) {
            var $chkboxes = $("#data-table-work-activities").find("tr input[type='checkbox']:checked");
            //data-table-work-items
            var checkBoxVals = $chkboxes.map(function () {
                return $(this).val();
            }).toArray();


            SubmitSelectedCertificateActivities(paymentCertificateId, checkBoxVals);

        }

        var SubmitSelectedCertificateActivities = function (paymentCertificateId, seletectedIds) {
            // let keys = Array.from( seletectedIds.keys() );
            $.ajax(
                {
                    type: "POST",
                    url: "/WorkPlanPackage/UpdateContractPaymentCertificateActivities",
                    data: {
                        paymentCertificateId: paymentCertificateId,
                        seletectedIds: seletectedIds
                    },
                    success: function (data) {
                        if (data.success) {
                            swal({
                                title: "Success",
                                text: "Certificate activity updated successfully!",
                                timer: 1500,
                                icon: "success",
                                buttons: false
                            }).then(function () {
                                window.location.href = data.href;
                            });
                        }
                        else {
                            swal(data.message, {
                                title: 'Cancelled',
                                icon: "error",
                            });
                        }
                    }
                });
        }

        var MarkCertificateComplete = function (paymentCertificateId) {
            $.ajax(
                {
                    type: "POST",
                    url: "/WorkPlanPackage/MarkCertificateComplete",
                    data: {
                        paymentCertificateId: paymentCertificateId
                    },
                    success: function (data) {
                        if (data.success) {
                            swal({
                                title: "Success",
                                text: "Certificate activity updated successfully!",
                                timer: 1500,
                                icon: "success",
                                buttons: false
                            }).then(function () {
                                window.location.href = data.href;
                            });
                        }
                        else {
                            swal(data.message, {
                                title: 'Cancelled',
                                icon: "error",
                            });
                        }
                    }
                });
        }

        var RemveCertificateActivity = function (certificateActivityId) {
            $.ajax(
                {
                    type: "POST",
                    url: "/WorkPlanPackage/RemveCertificateActivity",
                    data: {
                        certificateActivityId: certificateActivityId
                    },
                    success: function (data) {
                        if (data.success) {
                            swal({
                                title: "Success",
                                text: "Certificate activity removed successfully!",
                                timer: 1500,
                                icon: "success",
                                buttons: false
                            }).then(function () {
                                window.location.href = data.href;
                            });
                        }
                        else {
                            swal(data.message, {
                                title: 'Cancelled',
                                icon: "error",
                            });
                        }
                    }
                });
        }

        var ShowCertificateActivityEditForm = function (certificateActivityId) {
            var urlLocation = "/WorkPlanPackage/GetCertificateActivityEditForm?certificateActivityId=" + certificateActivityId;
            $("#modalViewBodyActivityDiv").load(urlLocation, function () {
                $("#modalViewActivityId").modal('open');
            });
        }

        //submit the form saving : certificate activity quantity

        var UpdateCertificateActivity = function () {
            var sendForm = $("#CertificateActivityForm").serialize();

            $.ajax(
                {
                    type: "POST",
                    url: "/WorkPlanPackage/UpdateCertificateActivity",
                    data: sendForm,
                    success: function (data) {
                        if (data.success) {
                            $("#modalViewId").modal('close');
                            swal({
                                title: "Success",
                                text: "Certificate activity updated successfully!",
                                timer: 1500,
                                icon: "success",
                                buttons: false
                            }).then(function () {
                                window.location.href = data.href;
                            });
                        }
                        else {
                            swal(data.message, {
                                title: 'Error Occured',
                                icon: "error",
                            });
                        }
                    }

                }
            );
        }


    </script>

}
