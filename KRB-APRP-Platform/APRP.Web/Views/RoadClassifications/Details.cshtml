                @if (applicationUser != null & applicationUser.Authority.Code != "KRB")
                {
                    @if (Model.RoadClassification.Status == 0)//click to submit
                    {

                        @if ((await AuthorizationService.AuthorizeAsync(User, "Permissions.RoadClassification.Submit")).Succeeded)
                        {
                            <a id="idSubmit" class="waves-effect waves-light btn right" href="#"><i class="material-icons right">navigate_next</i>Submit</a>
                        }
                    }

                    @if (Model.RoadClassification.Status == 1)//it is submitted: Click to approve
                    {
                        @if ((await AuthorizationService.AuthorizeAsync(User, "Permissions.RoadClassification.Approve")).Succeeded)
                        {
                            <a id="idApprove" class="waves-effect waves-light btn right" href="#"><i class="material-icons right">check</i>Approve</a>
                            <a id="idReject" class="waves-effect waves-light btn right" href="#"><i class="material-icons right">clear</i>Reject</a>
                        }
                        else
                        {
                            <a class="waves-effect waves-light btn right" href="#"><i class="material-icons right">done</i>Submitted</a>
                        }
                    }

                    @if (Model.RoadClassification.Status == 2)//Already Approved
                    {
                        <div class="col s12">
                            <a class="waves-effect waves-light btn right" href="#"><i class="material-icons right">check</i> Already Approved</a>
                        </div>
                    }

                    @if (Model.RoadClassification.Status == 3)//it is rejected:
                    {
                        @if ((await AuthorizationService.AuthorizeAsync(User, "Permissions.RoadClassification.Submit")).Succeeded)
                        {
                            <div class="col s12">
                                <a class="waves-effect waves-light btn right" href="#"><i class="material-icons right">clear</i>Rejected</a>
                                <a id="idResubmit" class="waves-effect waves-light btn right" href="#"><i class="material-icons right">navigate_next</i> Resubmit</a>
                            </div>
                        }
                    }

                    @if (Model.RoadClassification.Status == 4)//Already Approved by KRB
                    {
                        <div class="col s12">
                            <a class="waves-effect waves-light btn right" href="#"><i class="material-icons right">check</i> Already Approved By KRB</a>
                        </div>
                    }

                    @if (Model.RoadClassification.Status == 5)//Rejected by KRB
                    {
                        <div class="col s12">
                            <a class="waves-effect waves-light btn right" href="#"><i class="material-icons right">clear</i> Rejected By KRB</a>
                        </div>
                    }

                }
                @if (applicationUser != null & applicationUser.Authority.Code == "KRB")
                {

                    @if (Model.RoadClassification.Status == 2)//Already Approved at the RA.Now pending approval at KRB
                    {
                        @if ((await AuthorizationService.AuthorizeAsync(User, "Permissions.RoadClassification.Approve")).Succeeded)
                        {
                            <a id="idApprove" class="waves-effect waves-light btn right" href="#"><i class="material-icons right"></i>Approve</a>
                            <a id="idReject" class="waves-effect waves-light btn right" href="#"><i class="material-icons right"></i>Reject</a>
                        }
                    }

                    @if (Model.RoadClassification.Status == 4)//Already Approved at KRB
                    {
                        <div class="col s12">
                            <a class="waves-effect waves-light btn right" href="#"><i class="material-icons right"></i> Already Approved</a>
                        </div>
                    }

                    @if (Model.RoadClassification.Status == 5)//it is rejected: Click to Resubmit and it goes to the RA/CG
                    {
                        @if ((await AuthorizationService.AuthorizeAsync(User, "Permissions.RoadClassification.Approve")).Succeeded)
                        {
                            <div class="col s12">
                                <label>Rejected</label>
                                <a id="idReject" class="waves-effect waves-light btn right" href="#"><i class="material-icons right"></i> Rejected</a>
                            </div>
                        }
                    }
                }

                <a class="waves-effect waves-light btn-small" asp-action="Index"><i class="material-icons left">list</i>To List</a>
            </div>
        </div>
    </div>
