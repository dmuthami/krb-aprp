@model APRP.Web.ViewModels.RoadClassificationViewModel
@inject IApplicationUsersService _applicationUsersService
@inject IAuthorityService _authorityService


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout_App.cshtml";

    ApplicationUser applicationUser = null;
    //Get Identity
    var applicationUserResponse = await _applicationUsersService.FindByNameAsync(User.Identity.Name).ConfigureAwait(false);
    var objectResult = (ObjectResult)applicationUserResponse.IActionResult;
    if (objectResult.StatusCode.ToString().Equals("200", StringComparison.InvariantCultureIgnoreCase))
    {
        var result2 = (OkObjectResult)objectResult;
        applicationUser = (ApplicationUser)result2.Value;
        if (applicationUser != null)
        {
            var userAuthority = await _authorityService.FindByIdAsync(applicationUser.AuthorityId).ConfigureAwait(false);
            applicationUser.Authority = userAuthority.Authority;
        }
    }

}

