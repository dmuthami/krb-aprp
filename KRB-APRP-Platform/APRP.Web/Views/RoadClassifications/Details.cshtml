                    });
            });
            $("#idReject").on("click", function () {
                var ID = $('#RoadClassification_ID').val();
                var Comment = $('#RoadClassification_Comment').val();
                $.ajax({
                    method: "POST",
                    url: "/RoadClassifications/RejectRoadRequest",
                    datatype: "json",
                    data: {
                        ID: $('#RoadClassification_ID').val(),
                        Comment: $('#RoadClassification_Comment').val()
                    }
                })
