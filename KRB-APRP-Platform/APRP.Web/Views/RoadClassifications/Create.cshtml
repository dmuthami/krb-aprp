@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            username = $('#applicationUser_UserName').val();

            $.ajax({
                method: "POST",
                url: "/UserManagement/GetShortName",
                datatype: "json",
                data: {}
            })
                .done(function (data) {
                    //write json array object
                    console.log(data);
                    //Set Road Section ID to null

                    $("#idSpan").text(data.sn);
                    var Val1 = $("#idHomeAuthority").text();
                    $("#idHomeAuthority").text(Val1 + "-" + data.authorityCode);$("#idGlobalAuthority").text(data.authorityName); 
                });

            $("#idSubmit").on("click", function () {
                if (window.FormData !== undefined) {
                    var files = $("#fileInput").get(0).files;
                    var fileData = new FormData();

                    for (var i = 0; i < files.length; i++) {
                        fileData.append("fileInput", files[i]);
                    }

                    // Adding one more key to FormData object
                    fileData.append('AuthorityId', $('#AuthorityId option:selected').val());
                    fileData.append('RoadId', $('#RoadId').val());
                    fileData.append('RoadName', $('#RoadName').val());
                    fileData.append('RoadClassCodeUnitId', $('#RoadClassCodeUnitId option:selected').val());
                    fileData.append('StartPoint', $('#StartPoint').val());

                    fileData.append('EndPont', $('#EndPont').val());
                    fileData.append('TotalRoadLength', $('#TotalRoadLength').val());
                    fileData.append('TraversesMoreThanOneCounty', $('#TraversesMoreThanOneCounty').val());
                    fileData.append('LinkCountyHQtoAnother', $('#LinkCountyHQtoAnother').val());
                    fileData.append('ListCountyHQNames', $('#ListCountyHQNames').val());

                    fileData.append('LinkSubCountytoAnother', $('#LinkSubCountytoAnother').val());
                    fileData.append('ListSubCountyNames', $('#ListSubCountyNames').val());
                    fileData.append('AccessToPublicFacility', $('#AccessToPublicFacility').val());
                    fileData.append('ListPublicFacility', $('#ListPublicFacility').val());
                    fileData.append('AccessToGovernmentOffice', $('#AccessToGovernmentOffice').val());
                    fileData.append('ListGovernmentOffice', $('#ListGovernmentOffice').val());

                    fileData.append('SurfaceTypeId', $('#SurfaceTypeId option:selected').val());
                    fileData.append('RoadConditionCodeUnitId', $('#RoadConditionCodeUnitId option:selected').val());
                    fileData.append('CwayWidthInMeters', $('#CwayWidthInMeters').val());
                    fileData.append('RoadReserveSizeInMeters', $('#RoadReserveSizeInMeters').val());

                    $.ajax({
                        url: '/RoadClassifications/CreatePost',
                        type: "POST",
                        contentType: false, // Not to set any content header
                        processData: false, // Not to process data
                        data: fileData,
                        success: function (data) {
                            console.log(data);
                            if (data.success) {
                                console.log(data.href)
                                window.location.href = data.href;
                            }
                            else {
                                swal(data.message, {
                                    title: 'Cancelled',
                                    icon: "error",
                                });
                            }

                        },
                        error: function (err) {
                            console.log(err.statusText);
                            console.log(err.responseText);
                        }
                    });
                }
            });

        });
    </script>
