@model APRP.Web.ViewModels.DTO.UserDTO
@{
    ViewData["Title"] = "Verify Code";
    Layout = "~/Views/Shared/_LayoutHome_ui_v1.cshtml";
}

<div class="col s12">
    <div class="container">
        <div id="login-page" class="row">
            <div class="col s12 m6 l4 z-depth-4 card-panel border-radius-6 login-card bg-opacity-8">
                <form id="frmVerify" class="login-form" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Id" type="hidden" />
                    <div class="row">
                        <div class="input-field col s12">
                            <div class="card-content white-text center">
                                <img src="~/asset_default/app-assets/images/logo/login-logo.png" class="responsive-img" alt="Materialize">
                            </div>
                        </div>
                    </div>
                    <div class="row margin">
                        <div class="input-field col s12">
                            <i class="material-icons prefix pt-2">person_outline</i>
                            <input asp-for="Code" type="text">
                            <label asp-for="Code" class="center-align">Enter Code</label>
                            <div asp-validation-for="Code" class="text-danger"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <a id="idLogin" class="btn waves-effect waves-light border-round gradient-45deg-green-deep-green col s12">Verify</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6 m6 l6">
                            <p class="margin medium-small"><a asp-page="/Index">Back to Login!</a></p>
                        </div>
                        @*<div class="input-field col s6 m6 l6">
                            <p class="margin right-align medium-small"><a href="/Identity/Account/ForgotPassword">Forgot password ?</a></p>
                        </div>*@
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section CSS {
    <link rel="stylesheet" type="text/css" href="~/asset_default/app-assets/css/pages/login.css">
}

@section Scripts {
    <script>
        $(document).ready(function () {
            //wire click event to a link
            $('#idLogin').click(function () {
                document.getElementById('frmVerify').submit();
            });
        });
    </script>
}