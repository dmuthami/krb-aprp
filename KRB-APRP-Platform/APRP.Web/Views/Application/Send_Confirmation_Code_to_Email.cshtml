@model APRP.Web.ViewModels.DTO.UserDTO
@{
    ViewData["Title"] = "Confirm Email";
    Layout = "~/Views/Shared/_LayoutHome_ui_v1.cshtml";
}

<div class="col s12">
    <div class="container">
        <div id="login-page" class="row">
            <div class="col s12 m6 l4 z-depth-4 card-panel border-radius-6 login-card bg-opacity-8">
                <form class="pt-3" id="frmConfirmEmail" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Id" type="hidden" />
                    <div class="form-group">
                        <div class="row">
                            <div class="input-field col s12">
                                <div class="card-content white-text center">
                                    <img src="~/asset_default/app-assets/images/logo/login-logo.png" class="responsive-img" alt="Materialize">
                                </div>
                            </div>
                        </div>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class=" mdi mdi-email "></i></span>
                            </div>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email" aria-label="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mt-3">
                        <a class="btn btn-block btn-success btn-lg font-weight-medium auth-form-btn"
                           onclick="document.getElementById('frmConfirmEmail').submit();">Verify your email</a>
                    </div>


                    <div class="text-center mt-4 font-weight-light">
                        Not a member yet? <a asp-controller="Application" asp-action="Sign_Up_Landing" class="text-primary" style="color:black">Click here to register.</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section CSS {
    <link rel="stylesheet" type="text/css" href="~/asset_default/app-assets/css/pages/login.css">
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}