@model IEnumerable<APRP.Web.Domain.Models.PlanActivity>
<div class="card">
    <div class="card-content">
        <div class="row">
            <div class="col s12 p-1">
                <h4 class="card-title">
                    Select Activities to Inlcude in the certificate
                </h4>
                <div class="divider"></div>
            </div>
        </div>
        
        <div class="row">
            <div class="col s12 p-1">
                <table id="data-table-work-activities" class="striped display">
                    <thead>
                        <tr>
                            <th>Bill No</th>
                            <th>Item Code</th>
                            <th>Description</th>
                            <th>Unit</th>
                            <th>Package Quantity</th>
                            <th>Bid Rate</th>
                            <th>Bill Item Amount</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var activity in Model.OrderBy(i => i.ItemActivityUnitCost.ItemActivityGroupId))
                            {
                        <tr>
                            <td>@activity.ItemActivityUnitCost.ItemActivityGroup.BillNumber</td>
                            <td>@activity.ItemActivityUnitCost.ItemCode</td>
                            <td>@activity.ItemActivityUnitCost.Description</td>
                            <td>@activity.ItemActivityUnitCost.UnitCode</td>
                            <td>@activity.PackageQuantity</td>
                            <td>@activity.BidRate</td>
                            <td>KSH @activity.BillItemAmount.ToString("N")</td>
                            <td class="center-align">
                                <label>
                                    <input type="checkbox" value="@activity.ID" />
                                    <span></span>
                                </label>
                            </td>
                        </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">There are no contract activities for the selected contract.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">



</script>
