        function GetURL2(href) {

            //Referer URL
            var referer = href;

            //get selected year
            var YearID = $('#ARICSYear_ID option:selected').val();

            //Reconstruct the other URL
            var res = referer.split("/");
            var a = res[0] + "//" + res[2] + "/";
            var b = res[3] + "/";
            var c = res[4] + "/";
            var d = res[5].split("?")[0] + "?";
            var e = res[5].split("?")[1].split("=")[0] + "="+ YearID;
            var f = "&"+res[5].split("&")[1];

            var url2 = a
                + b 
                + c
                + d
                + e
                + f;
            return url2;
        }

