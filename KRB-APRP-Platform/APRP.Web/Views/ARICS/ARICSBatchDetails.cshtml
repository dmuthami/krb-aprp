                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "ajax": {
                    "url": '/ARICS/OnGetARICSBatchRoadSections',
                    "type": "POST",
                    "datatype": "json",
                    "data": {
                        ARICSMasterApprovalID: ARICSMasterApprovalID,
                        ARICSYearId: ARICSYearId,
                        Year: Year
                    }
                },
                "columnDefs":
                    [{
                        "targets": [0],
                        "visible": false,
                        "searchable": false
                    }],
                "columns": [
                    { "data": "id", "name": "ID", "autoWidth": true },
                    { "data": "aricsmasterapprovalid", "name": "ARICS Master Approval Id", "autoWidth": true },
                    { "data": "roadsectionid", "name": "Road Section Id", "autoWidth": true },
                    { "data": "sectionid", "name": "Section Id", "autoWidth": true },
                    { "data": "sectionname", "name": "Section Name", "autoWidth": true },
                    {
                        "render": function (data, type, full, meta) {
                            return '<td class="center-align">' +
                                '<button id="'+full.id+'" onclick="fire('+full.id+')" type="button" class="waves-effect waves-light  btn-small"><i class="material-icons right">gps_fixed</i></button>' +
                                '</td>'
                        }
                    }
                ]
            });

            new $.fn.dataTable.Buttons(table, {
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });

            table.buttons(0, null).container().prependTo(
                table.table().container()
            );
        }

        function ClearTable() {
            $("#page-length-option").find("tr:gt(0)").remove();
            // clear the table before populating it with more data
            $("#page-length-option").DataTable().clear();
        }

        $('#page-length-option2').on('click', 'button.btn-small', function () {
            var btnClicked = $(this).data("btn");

            var ARICSMasterApprovalID = $('#ARICSMasterApproval_ID').val()

