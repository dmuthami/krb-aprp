<!-- Content Area Starts -->
<div class="chat-application">
    <div class="chat-content-head">
        <div class="header-details">
            <h5 class="m-0 sidebar-title" style="color:black;">ARICS Approval Workflow</h5>
        </div>
    </div>

    <!-- Scroll - vertical, dynamic height -->

    <div class="row">
        <input type="hidden" asp-for="Year" />
        <input type="hidden" asp-for="ARICSYear.ID" />
        <input type="hidden" asp-for="Authority.Code" />
        <input type="hidden" asp-for="Authority.ID" />
        <input type="hidden" asp-for="ARICSMasterApproval.ID" />
        <input type="hidden" asp-for="ResetStatus" />
        <input type="hidden" asp-for="NextStatus" />

        <div class="container">
            <div class="section section-data-tables">
                <div class="col s12">

                    <div class="card">
                        <div class="card-content">
                            <div class="col s8">
                                <p class="caption">
                                    ARICS Master approval <strong>Batch No. @Model.ARICSMasterApproval.BatchNo</strong>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-content">
                            <p class="caption">
                                Road Sections Included in this Batch
                            </p>
                            <table id="page-length-option" class="subscription-table responsive-table striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>ARICS Master Approval Id</th>
                                        <th>Road Section Id</th>
                                        <th>Section Id</th>
                                        <th>Section Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-content">
                            <p class="caption">
                                Road Sections for the Year of Interest that have ARICS
                            </p>

                            <table id="page-length-option2" class="subscription-table responsive-table striped">
                                <thead>
                                    <tr>
                                        <th>Section Number</th>
                                        <th>Section Name</th>
                                        <th>Length</th>
                                        <th>Road ID</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var roadSection in Model.RoadSections)
                                    {
                                        <tr>
                                            <td>@roadSection.SectionID</td>
                                            <td>@roadSection.SectionName</td>
                                            <td>@String.Format("{0:0.00}", @roadSection.Length) </td>
                                            <td>@roadSection.Road.RoadNumber </td>

                                            <td class="center-align">
                                                <button type="button" data-id="@roadSection.ID" class="waves-effect waves-light  btn-small">
                                                    <i class="material-icons right">bubble_chart</i>Add
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>

                    <div class="card card-default scrollspy">
                        <div class="card-content">
                            <div class="row">
                                <div class="col s6 m6 l6">
                                    <text>ARICS Approval History</text>
                                </div>
                            </div>
                            <div class="row">
                                <div id="responsive-table" class="card card card-default scrollspy">
                                    <table id="page-length-option" class="display">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ARICSApprovalh[0].ARICSApprovalLevel.Role)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ARICSApprovalh[0].ARICSApprovalLevel.Designation)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ARICSApprovalh[0].UserName)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ARICSApprovalh[0].Comment)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ARICSApprovalh[0].UpdatedBy)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ARICSApprovalh[0].UpdatedDate)
                                                </th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.ARICSApprovalh != null)
                                            {
                                                foreach (var item in Model.ARICSApprovalh)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.ARICSApprovalLevel.Role)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.ARICSApprovalLevel.Designation)
                                                        </td>

                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.UserName)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Comment)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.UpdatedBy)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.UpdatedDate)
                                                        </td>
                                                        <td>
                                                            @if ((await AuthorizationService.AuthorizeAsync(User, "Permissions.ARICS.View")).Succeeded)
                                                            {
                                                                <a href="#">Details</a>
                                                            }
                                                        </td>
                                                    </tr>
                                                }
