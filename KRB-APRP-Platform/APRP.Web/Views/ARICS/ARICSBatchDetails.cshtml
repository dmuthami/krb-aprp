                        if (data === undefined) {
                            console.log(data);
                            //Refresh the page
                            window.location.href = data.href;
                        } else {
                            if (data.success) {
                                //Refresh the page
                                window.location.href = data.href;
                            }
                            else {
                                swal(data.message, {
                                    title: 'Cancelled',
                                    icon: "error",
                                });
                            }
                        }

                    }

                }
            );

        });

        function fire(myid) {
            //get road section id
