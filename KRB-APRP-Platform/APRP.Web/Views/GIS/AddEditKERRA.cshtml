@model APRP.Web.Domain.Models.KerraRoad

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}
@section vendorCss
{
    <link rel="stylesheet" type="text/css" href="~/asset_default/app-assets/vendors/data-tables/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" type="text/css" href="~/asset_default/app-assets/vendors/data-tables/extensions/responsive/css/responsive.dataTables.min.css" />
    <link rel="stylesheet" type="text/css" href="~/asset_default/app-assets/vendors/data-tables/css/select.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="~/asset_default/app-assets/vendors/dropify/css/dropify.min.css">
}

@section customCss
{
    <link rel="stylesheet" type="text/css" href="~/asset_default/app-assets/css/pages/app-chat.css">
    <link href="~/asset_default/app-assets/vendors/sweetalert/sweetalert.css" type="text/css" rel="stylesheet" />
}


<div class="chat-application">
    <div class="row">
        <div class="col s12">
            <div class="card">
                <div class="card-content">

                    <form id="idAddEditKERRA" asp-action="AddEditKERRA" asp-route-id="@Model.ID" onsubmit="return JQueryAjaxPost2(this);" autocomplete="off">
                        <input type="hidden" asp-for="ID" />

                        <div class="row">
                            <div class="col s6 m6">
                                <label asp-for="RdNum" class="control-label"></label>
                                <input asp-for="RdNum" class="form-control" />
                                <span asp-validation-for="RdNum" class="text-danger"></span>
                            </div>
                            <div class="col s6 m6">
                                <label asp-for="RdName" class="control-label"></label>
                                <input asp-for="RdName" class="form-control" />
                                <span asp-validation-for="RdName" class="text-danger"></span>
                            </div>
                            <div class="col s6 m6">
                                <label asp-for="Section_ID" class="control-label"></label>
                                <input asp-for="Section_ID" class="form-control" />
                                <span asp-validation-for="Section_ID" class="text-danger"></span>
                            </div>
                            <div class="col s6 m6">
                                <label asp-for="Sec_Name" class="control-label"></label>
                                <input asp-for="Sec_Name" class="form-control" />
                                <span asp-validation-for="Sec_Name" class="text-danger"></span>
                            </div>
                            <div class="col s6 m6">
                                <label asp-for="SurfaceType" class="control-label"></label>
                                <input asp-for="SurfaceType" class="form-control" />
                                <span asp-validation-for="SurfaceType" class="text-danger"></span>
                            </div>
                            <div class="col s6 m6">
                                <label asp-for="RdClass" class="control-label"></label>
                                <input asp-for="RdClass" class="form-control" />
                                <span asp-validation-for="RdClass" class="text-danger"></span>
                            </div>
                            <div class="col s6 m6">
                                <label asp-for="Length" class="control-label"></label>
                                <input asp-for="Length" class="form-control" />
                                <span asp-validation-for="Length" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <button class="btn waves-effect waves-light" type="submit" name="action">
                            Submit
                            <i class="material-icons right">send</i>
                        </button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section vendorJS
{
    <script src="~/asset_default/app-assets/vendors/sweetalert/sweetalert.min.js" type="text/javascript"></script>
    <script src="~/asset_default/app-assets/vendors/dropify/js/dropify.min.js"></script>

}

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            username = $('#applicationUser_UserName').val();
    </script>

}