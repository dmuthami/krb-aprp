<div class="row">
    <div class="container">
        <div class="section section-data-tables">
            <div class="row">

                <form>
                    @Html.HiddenFor(x => x.Referer)
                    <input type="hidden" asp-for="RoadSection.ID" />
                    <input type="hidden" asp-for="_Year" />
                    <input type="hidden" asp-for="ResetStatus" />
                    <input type="hidden" asp-for="NextStatus" />
                </form>

                <div class="col s12 m12 l12">

                    <div class="card card card-default scrollspy">
                        <div class="card-content">
                            <div class="row section">
                                <div class="col s3 m3 l3">
                                    <div class="form-group">
                                        <label class="form-label">Choose Calendar Year</label>
                                        <select asp-for="ARICSYear.ID" class="browser-default" asp-items="ViewBag.ARICSYearId"></select>
                                        <span asp-validation-for="ARICSYear.ID" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col s9 m9 l9">
                                    <div class="row">
                                        <p class="card-title">
                                            Roadsection details for selected road section(
                                            <strong>@Model.RoadSection.SectionID:@Model.RoadSection.SectionName</strong>
                                            )in a specified calendar year as captured from the ARICS Form
                                        </p>
                                    </div>
                                    <div class="row">
                                        <div class="col s4 m4 l4">
                                            <div class="form-group">
                                                <label>Section ID</label>:
                                                @Html.DisplayFor(model => model.RoadSection.ARICSSectionID)
                                            </div>
                                            <div class="form-group">
                                                <label>Sheet No</label>:
                                                @Html.DisplayFor(model => model.RoadSection.ARICSSheetNo)
                                            </div>
                                        </div>
                                        <div class="col s4 m4 l4">
                                            <div class="form-group">
                                                <label>Section Name</label>:
                                                @Html.DisplayFor(model => model.RoadSection.ARICSSectionName)
                                            </div>
                                            <div class="form-group">
                                                <label>Sheet Length</label>:
                                                @Html.DisplayFor(model => model.RoadSection.ARICSSheetLength)
                                            </div>
                                        </div>
                                        <div class="col s4 m4 l4">
                                            <div class="form-group">
                                                <label>Section Length</label>:
                                                @Html.DisplayFor(model => model.RoadSection.ARICSSectionLength)
                                            </div>
                                            <div class="form-group">
                                                <label>Interval</label>:
                                                @Html.DisplayFor(model => model.RoadSection.ARICSSheetInterval)
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-content">
                            <p class="card-title">
                                Roadsheets for selected road section(
                                <strong>@Model.RoadSection.SectionID-@Model.RoadSection.SectionName</strong>
                                ) in specified calendar year
                            </p>

                            <div class="col  xl12 l12 m12 s12">
                                <table id="page-length-option" class="display">
                                    <thead>
                                        <tr>
                                            <th>
                                                Sheet No
                                            </th>
                                            <th>
                                                Start-End &Aacute; Chainage
                                            </th>
                                            <th>
                                                Terrain Type
                                            </th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.RoadSheet != null)
                                        {
                                            foreach (var item in Model.RoadSheet)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.SheetNo)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.StartChainage) -  @Html.DisplayFor(modelItem => item.EndChainage)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TerrainType.Name)
                                                    </td>
                                                    <td>
                                                        <a asp-page="/ARICZ/Aricsheet" asp-route-sheetid="@item.ID">ARICS </a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>

                    <div class="card card-default scrollspy">
                        <div class="card-content">
                            <div class="row">
                                <div class="col s6 m6 l6">
                                    <text>ARICS Approval History</text>
                                </div>
                            </div>
                            <div class="row">
                                <div id="responsive-table" class="card card card-default scrollspy">
                                    <table id="page-length-option" class="display">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ARICSApprovalh[0].ARICSApprovalLevel.Role)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ARICSApprovalh[0].ARICSApprovalLevel.Designation)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ARICSApprovalh[0].UserName)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ARICSApprovalh[0].Comment)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ARICSApprovalh[0].UpdatedBy)
