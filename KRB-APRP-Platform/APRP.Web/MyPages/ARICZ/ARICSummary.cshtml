        $(document).ready(function () {
            $.ajax({
                method: "POST",
                url: "/UserManagement/GetShortName",
                datatype: "json",
                data: {}
            })
                .done(function (data) {
                    //write json array object
                    console.log(data);
                    //Set Road Section ID to null

                    $("#idSpan").text(data.sn);
                    var Val1 = $("#idHomeAuthority").text();
                    $("#idHomeAuthority").text(Val1 + "-" + data.authorityCode); $("#idGlobalAuthority").text(data.authorityName);
                    $("#idGlobalAuthority").text(data.authorityName);
                });

            //Apply datatable styling to table
            $("#page-length-option").DataTable();

            //Referer URL
            var url = GetURL();
            $("#IDBackToList").attr("href", url);
            $("#IDBackToList2").attr("href", url);

            //Reset comment
            $("#ARICSApproval_Comment").val("");

        });

        function GetURL() {
            //Referer URL
            var referer = $("#Referer").val();
            return referer;
        }

        //ExportARICSSumUnpaved Report
        $('#idARICSSumUnpaved').on('click', function () {
            Year = $('#ARICSYear_ID option:selected').val();

            $.ajax({
                method: "POST",
                url: "/ARICS/ExportARICSSumUnpaved",
                datatype: "json",
                data: { SectionID: $("#RoadSection_ID").val(), Year: Year }
            })
                .done(function (data) {
                    console.log(data.value);
                    if (data.value.success) {
                        window.location.href = data.value.href;
                    }
                    else {
                        swal(data.value.message, {
                            title: 'Cancelled',
                            icon: "error",
                        });
                    }
                });

        });

        //ExportARICSSumPaved Report
        $('#idARICSSumPaved').on('click', function () {
            Year = $('#ARICSYear_ID option:selected').val();
            $.ajax({
                method: "POST",
                url: "/ARICS/ExportARICSSumPaved",
                datatype: "json",
                data: { SectionID: $("#RoadSection_ID").val(), Year: Year }
            })
                .done(function (data) {
                    console.log(data.value);
                    if (data.value.success) {
                        window.location.href = data.value.href;
                    }
                    else {
                        swal(data.value.message, {
                            title: 'Cancelled',
                            icon: "error",
                        });
                    }
                });
        });

        //-----Load road Sections for the selected year----
        $("#ARICSYear_ID").bind("change paste keyup", function () {
            Year = $('#ARICSYear_ID option:selected').val();
            RoadSectionId = $('#RoadSection_ID').val();
            //Populate with road sections for the specific road
            $.ajax({
                method: "POST",
                url: "/ARICS/GetRoadSheetsForSpecificYear",
                datatype: "json",
                data: { RoadSectionId: RoadSectionId, Year: Year }
            })
                .done(function (data) {
                    console.log(data);
                    if (data.success) {
                        window.location.href = GetURL2(data.href);
                    }
                    else {
                        swal(data.message, {
                            title: 'Cancelled',
                            icon: "error",
                        });
                    }
                });
        });
        //-----End Load road Sections for the selected year----

        function GetURL2(href) {
            //Referer URL
            var referer = $("#Referer").val();
            var res = referer.split("/");
            var url = res[0] + "//" + res[2] + href;
            return url;
        }

        function GetURLReferer() {
            //Referer URL
            var referer = $("#Referer").val();
            return referer;
        }

        function SetARICSApproval(RoadSection_ID, Year, URL, Status, Comment) {
            $.ajax({
                url: URL,
                method: "POST",
                datatype: "json",
                data: {
                    RoadSectionID: RoadSection_ID,
                    Year: Year,
                    Status: Status,
                    Comment: Comment
                },
                success: function (data) {
                    console.log(data);
                    if (data.success) {
                        console.log(data.href)
                        window.location.href = data.href;
                    }
                    else {
                        swal(data.message, {
                            title: 'Cancelled',
                            icon: "error",
                        });
                    }

                },
                error: function (err) {
                    console.log(err.statusText);
                }
            });
        }

        //Click Button to Submit ARICS Approval
        $("#idUpdateARICSApproval").on("click", function () {
            // Get road Section ID
            var RoadSection_ID = $('#RoadSection_ID').val();
            //Get calendar year
            var Year = $('#zYear').val();
            var URL = "/ARICS/UpdateARICSApproval";
            //Status
            var NextStatus = $('#NextStatus').val();

            //Comment
            var Comment = $("#ARICSApproval_Comment").val();

            SetARICSApproval(RoadSection_ID, Year, URL, NextStatus, Comment);

        });

        //Click Button to Reject ARICS Approval
        $("#idRejectARICSApproval").on("click", function () {
            // Get road Section ID
            var RoadSection_ID = $('#RoadSection_ID').val();
            //Get calendar year
            var Year = $('#zYear').val();
            var URL = "/ARICS/UpdateARICSApproval";

            //Status
            var ResetStatus = $('#ResetStatus').val();

            //Comment
            var Comment = $("#ARICSApproval_Comment").val();

            SetARICSApproval(RoadSection_ID, Year, URL, ResetStatus, Comment);

        });

        //Click Button to Approve ARICS Approval
        $("#idApproveARICSApproval").on("click", function () {

            // Get road Section ID
            var RoadSection_ID = $('#RoadSection_ID').val();

            //Get calendar year
            var Year = $('#zYear').val();
            var URL = "/ARICS/ApproveARICSApproval";

            SetARICSApproval(RoadSection_ID, Year, URL);

        });

        //Click Button to Reset ARICS Approval
        $("#idResetARICSApproval").on("click", function () {
            // Get road Section ID
            var RoadSection_ID = $('#RoadSection_ID').val();
            //Get calendar year
            var Year = $('#zYear').val();
            var URL = "/ARICS/ResetARICSApproval";
            SetARICSApproval(RoadSection_ID, Year, URL);

        });
    </script>
