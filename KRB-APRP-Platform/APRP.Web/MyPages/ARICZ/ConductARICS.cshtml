        function CreateRoadsheets(roadLengthKM, sectionLengthKM, RoadSectionID) {
            //Hit controller to create respective roadsheets for the selected road section
            //Get year from dropdown
            var Year = $('#ARICSYear_ID option:selected').val();
            $.ajax({
                method: "POST",
                url: "/ARICS/CreateRoadSheets",
                datatype: "json",
                data: {
                    roadLengthKM: roadLengthKM,
                    sectionLengthKM: sectionLengthKM,
                    RoadSectionID: RoadSectionID,
                    Year: Year
                }
            })
                .done(function (data) {
                    //write json array object
                    //console.log(data);
                    ClearTable();
                    myJsonData = data;
                    console.log(myJsonData);
                    populateDataTable(myJsonData);
                });
        };

        function CheckRoadsheetsForSelectedRoadSection(RoadSectionID) {
            //Get year from dropdown
            var Year = $('#ARICSYear_ID option:selected').val();
            $.ajax({
                method: "POST",
                url: "/ARICS/CheckRoadSheetForRoadSection",
                datatype: "json",
                data: {
                    RoadSectionID: RoadSectionID,
                    Year: Year
                }
            })
                .done(function (data) {
                    if (data == null) {
                        //show create roadsheets button
                        $('#divCreate').show();

                        //Clear datagrid
                        ClearTable();
                    } else {
                        //Call function to display roadsheets
                        DisplayRoadsheets(RoadSectionID, Year);
                    }
                });
        };

        function ConvertToKM(length) {
            var _len = length;
            _len = _len / 1.0;
            //return _len.toFixed(2);//Round of to 2 decimal points
            return _len;
        }

        function GetAdminBnd(RoadSectionID) {
            $.ajax({
                method: "POST",
                url: "/ARICS/GetAdminBnd",
                datatype: "json",
                data: {
                    RoadSectionID: RoadSectionID
                }
            })
                .done(function (data) {
                    //write json array object
                    console.log(data);
                    $("#idConstituencyName").val(data.name);
                    $("#idCountyName").val(data.county.name);
                })
                .fail(function (jqXHR, textStatus, errorThrown) {
                    console.log("Request failed: " + textStatus);
                    console.log("Error Code: " + errorThrown);
                });

        }

        function DisplayRoadsheets(RoadSectionID, Year) {
            // clear the table before populating it with more data
            ClearTable();

            //Hit controller to create respective roadsheets for the selected road section
            $.ajax({
                method: "POST",
                url: "/ARICS/DisplayRoadSheets",
                datatype: "json",
                data: {
                    RoadSectionID: RoadSectionID,
                    Year: Year
                }
            })
                .done(function (data) {
                    //write json array object
                    myJsonData = data;
                    console.log(myJsonData);
                    populateDataTable(myJsonData);
                });
        };

        function populateDataTable(data) {
            console.log("Populating data table...");
            var length = Object.keys(data).length;
            for (var i = 0; i < length + 1; i++) {
                var roadsheet = data[i];

                // You could also use an ajax property on the data table initialization
                $('#page-length-option').dataTable().fnAddData([
                    roadsheet.sheetNo,
                    roadsheet.startChainage,
                    roadsheet.endChainage,
                    roadsheet.roadSection.sectionName,
                    ' <input id="idDisplay' + roadsheet.id + '" type="button" value="Conduct ARICS" class="btn btn-sm btn-success" />'
                ]);
            }
        }

        function ClearTable() {
            $("#page-length-option").find("tr:gt(0)").remove();
            // clear the table before populating it with more data
            $("#page-length-option").DataTable().clear();
        }

        function GetURL() {
            //Referer URL
            var referer = $("#Referer").val();
            return referer;
        }

