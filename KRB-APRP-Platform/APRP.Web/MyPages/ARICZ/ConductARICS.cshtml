    <script>
        /*--Global Variables--*/
        var myArray = {};
        /*--End of Global Variables--*/

        //Call function to load data
        $(document).ready(function () {
            $.ajax({
                method: "POST",
                url: "/UserManagement/GetShortName",
                datatype: "json",
                data: {}
            })
                .done(function (data) {
                    //write json array object
                    console.log(data);
                    //Set Road Section ID to null

                    $("#idSpan").text(data.sn);
                    var Val1 = $("#idHomeAuthority").text();
                    $("#idHomeAuthority").text(Val1 + "-" + data.authorityCode); $("#idGlobalAuthority").text(data.authorityName);
                });
            //Referer URL
            var url = GetURL();
            $("#IDBackToList").attr("href", url);

            $("#page-length-option").DataTable();

            //----------Road
            //populate the roads
            $.ajax({
                method: "POST",
                url: "/ARICS/GetRoads",
                datatype: "json",
                data: {}
            })
                .done(function (data) {
                    //write json array object
                    console.log(data);
                    var s = '<option value="-1">Please Select a Road</option>';
                    for (var i = 0; i < data.length; i++) {
                        s += '<option value="' + data[i].id + '">' + data[i].name + '</option>';
                    }
                    $("#IdRoadNumber").html(s);
                });

            //-------End of Road

            //-----Load road Sections for the selected road----

            var _RoadSectionID = 0;
            $("#IdRoadNumber").bind("change paste keyup", function () {
                //get value from input element
                //var selObj = document.getElementById("IdRoadNumber");
                //myVal = selObj.selectedIndex;

                myVal = $('#IdRoadNumber option:selected').val();

                //Remove existing road sections
                $("#IdRoadSectionID > option").remove();

                //Populate with road sections for the specific road
                $.ajax({
                    method: "POST",
                    url: "/ARICS/GetRoadSectionsForSpecificRoad",
                    datatype: "json",
                    data: { SelectedRoadID: myVal }
                })
                    .done(function (data) {
                        //write json array object
                        console.log(data);
