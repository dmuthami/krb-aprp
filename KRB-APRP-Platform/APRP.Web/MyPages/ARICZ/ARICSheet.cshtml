@section Scripts {
    <script>
        //Call function to load data
        $(document).ready(function () {

            username = $('#applicationUser_UserName').val();

            $.ajax({
                method: "POST",
                url: "/UserManagement/GetShortName",
                datatype: "json",
                data: {}
            })
                .done(function (data) {
                    //write json array object
                    console.log(data);
                    //Set Road Section ID to null

                    $("#idSpan").text(data.sn);
                    var Val1 = $("#idHomeAuthority").text();
                    $("#idHomeAuthority").text(Val1 + "-" + data.authorityCode); $("#idGlobalAuthority").text(data.authorityName);
                    $("#idGlobalAuthority").text(data.authorityName);
                });

            //Referer URL
            var url = GetURL();
            $("#IDBackToList").attr("href", url);
            $("#IDBackToList2").attr("href", url);

            //Set datatable formatting
            $("#page-length-option").DataTable();

            //populate the counties
            $.ajax({
                method: "POST",
                url: "/ARICS/GetCounty",
                datatype: "json",
                data: {}
            })
                .done(function (data) {
                    //write json array object
                    console.log(data);
                    var s = '<option value="-1">Please Select a County</option>';
                    for (var i = 0; i < data.length; i++) {
                        s += '<option value="' + data[i].iD + '">' + data[i].name + '</option>';
                    }
                    $("#IdCounty").html(s);
                });

            /**
            * Change function on the Market drop down
            */
            $("#IdCounty").bind("change paste keyup", function () {

                //get value from input element
                var selectedCounty = $("#IdCounty option:selected").text();
                var myVal = $('[id$=IdCounty] option:selected').val();
                //var myVal =$(this).children("option:selected").val()
                var selObj = document.getElementById("IdCounty");
                //myVal = selObj.options[selObj.selectedIndex].value;
                myVal = selObj.selectedIndex;

                $("#country").val(selectedCounty);

                //Remove existing constituencies
                $("#IdConstituency > option").remove();

                //populate with constituencies for the selected county
                $.ajax({
                    method: "POST",
                    url: "/ARICS/GetConstituenciesForCounty",
                    datatype: "json",
                    data: { selectedCountyID: myVal }
                })
                    .done(function (data) {
                        //write json array object
                        console.log(data);
                        var s = '<option value="-1">Please Select a Constituency</option>';
                        for (var i = 0; i < data.length; i++) {
                            s += '<option value="' + data[i].iD + '">' + data[i].name + '</option>';
                        }
                        $("#IdConstituency").html(s);
                    });
            });


            //----------Road

            //populate the roads
            $.ajax({
                method: "POST",
                url: "/ARICS/GetRoads",
                datatype: "json",
                data: {}
            })
                .done(function (data) {
                    //write json array object
                    console.log(data);
                    var s = '<option value="-1">Please Select a Road</option>';
                    for (var i = 0; i < data.length; i++) {
                        s += '<option value="' + data[i].iD + '">' + data[i].name + '</option>';
                    }
                    $("#IdRoad_ID").html(s);
                });

            //-------End of Road

            //Load road Sections for the selected road
            var myArray = {};
            var _RoadSectionID = 0;
            $("#IdRoad_ID").bind("change paste keyup", function () {
                //get value from input element
                var selObj = document.getElementById("IdRoad_ID");
                myVal = selObj.selectedIndex;

                //Remove existing constituencies
                $("#IdRoadSectionID > option").remove();

                //populate with constituencies for the selected county
                $.ajax({
                    method: "POST",
                    url: "/ARICS/GetRoadSectionsForSpecificRoad",
                    datatype: "json",
                    data: { selectedRoadID: myVal }
                })
                    .done(function (data) {
                        //write json array object
                        console.log(data);
                        var s = '<option value="-1">Please Select a Road Section</option>';
                        for (var i = 0; i < data.length; i++) {
                            s += '<option value="' + data[i].road_Section_ID + '">' + data[i].road_Section_Name + '</option>';
                            //save road section id from database serial field
                            myArray[data[i].road_Section_ID] = data[i].id;
                            //_RoadSectionID = data[i].iD;
                        }
                        console.log("MyArray : " + myArray);
                        $("#IdRoadSectionID").html(s);
                    });
            });

            //Load Section Length for the selected road section
            $("#IdRoadSectionID").bind("change paste keyup", function () {
                //get value from input element
                var selObj = document.getElementById("IdRoadSectionID");
                myVal = selObj.selectedIndex;

                myVal = $('#IdRoadSectionID option:selected').val();
                //Set section length to null
                $("#IdSectionLength").val();

                //populate with constituencies for the selected county
                $.ajax({
                    method: "POST",
                    url: "/ARICS/GetRoadSectionLength",
                    datatype: "json",
                    data: { RoadSectionID: myVal }
                })
                    .done(function (data) {
                        //write json array object
                        console.log(data);
                        console.log("length: " + data.length);
                        $("#IdSectionLength").val(data.length);

                        CreateRoadsheets(data.length, 5, myArray[myVal]);
                    });
            });
        });

        function CreateRoadsheets(sectionLength, chainage, RoadSectionID) {
            //Hit controller to create respective road
            $.ajax({
                method: "POST",
                url: "/ARICS/CreateRoadSheets",
                datatype: "json",
                data: {
                    sectionLength: sectionLength,
                    chainage: chainage,
                    RoadSectionID: RoadSectionID
                }
            })
                .done(function (data) {
                    //write json array object
                    console.log(data);

                });
        };

        function GetURL() {
            //Referer URL
            var referer = $("#Referer").val();
            return referer;
        }
    </script>
}