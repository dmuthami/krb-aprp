                        </dd>
                    </dl>
                </div>
                <div class="col s6">
                    <dl class="row">
                        <dt class="col s4">
                            @*@Html.DisplayNameFor(model => model.Constituency.Name):*@
                            Constituency:
                        </dt>
                        <dd class="col s6">
                            @Html.DisplayFor(model => model.Constituency.Name)
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="row">
                <div class="col s4">
                    <dl class="row">
                        <dt class="col s2">
                            @Html.DisplayNameFor(model => model.Road.RoadNumber):
                        </dt>
                        <dd class="col s10">
                            @Html.DisplayFor(model => model.Road.RoadNumber)
                        </dd>
                    </dl>
                </div>
                <div class="col s4">
                    <dl class="row">
                        <dt class="col s2">
                            @Html.DisplayNameFor(model => model.RoadSheet.RoadSection.SectionName):
                        </dt>
                        <dd class="col s10">
                            @Html.DisplayFor(model => model.RoadSheet.RoadSection.SectionName)
                        </dd>
                    </dl>
                </div>
                <div class="col s4">
                    <dl class="row">
                        <dt class="col s2">
                            @{
                                string str = null;
                                str = Html.DisplayNameFor(model => model.RoadSheet.RoadSection.Length);
                                @: @str
                            }
                        </dt>
                        <dd class="col s10">

                            @{
                                Double _LengthKM = 0D;
                                try
                                {
                                    _LengthKM = Model.RoadSheet.RoadSection.Length;

                                    @: @String.Format("{0:0,0.00}", _LengthKM)
                                }
                                catch (Exception)
                                {
                                    @: @String.Format("{0:0,0.00}", _LengthKM);
                                }
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="row">
                <div class="col s6">
                    <label class="control-label">Section Start Chainage</label>
                    <input asp-for="RoadSheet.StartChainage" class="form-control" readonly />
                </div>
                <div class="col s6">
                    <label class="control-label">Location</label>
