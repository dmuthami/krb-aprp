@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "~/Views/Shared/_LayoutHome_ui_v1.cshtml";
}

<div class="col s12">
    <div class="container">
        <div id="login-page" class="row">
            <div class="col s12 m6 l4 z-depth-4 card-panel border-radius-6 login-card bg-opacity-8">
                <form id="frmLogin" class="login-form" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="row">
                        <div class="input-field col s12">
                            <div class="card-content white-text center">
                                <img src="~/asset_default/app-assets/images/logo/login-logo.png" class="responsive-img" alt="Materialize">
                            </div>
                        </div>
                    </div>
                    <div class="row margin">
                        <div class="input-field col s12">
                            <h6 class="font-weight-light">Enter your Username and Email Address to receive password reset link</h6>
                        </div>
                    </div>
                    <div class="row margin">
                        <div class="input-field col s12">
                            <i class="material-icons prefix pt-2">person_outline</i>
                            <input asp-for="Input.UserName" type="text">
                            <label asp-for="Input.UserName" class="center-align">Username</label>
                            <div asp-validation-for="Input.UserName" class="text-danger"></div>
                        </div>
                    </div>

                    <div class="row margin">
                        <div class="input-field col s12">
                            <i class="material-icons prefix pt-2">lock_outline</i>
                            <input asp-for="Input.Email" type="email">
                            <label asp-for="Input.Email">Email</label>
                            <div asp-validation-for="Input.Email" class="text-danger"></div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <button type="submit" class="btn waves-effect waves-light border-round gradient-45deg-green-deep-green col s12">Submit</button>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s6 m6 l6">
                            <p class="margin medium-small"><a asp-controller="Home" asp-action="Index">Back to Login</a></p>
                        </div>
                        <div class="input-field col s6 m6 l6">
                            <p class="margin right-align medium-small"><a href="/Application/Register">Register Now!</a></p>
                        </div>
                    </div>
                   </form>
            </div>
        </div>
    </div>
</div>

@section CSS {
    <link rel="stylesheet" type="text/css" href="~/asset_default/app-assets/css/pages/login.css">
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
